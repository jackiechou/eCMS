@using MvcPaging
@model List<LS_tblCompanyViewModel>

<div id="divEdit">
  @Html.Action("_CreateLS_tblCompany")
</div>
@using (Html.BeginForm("Index", "LS_tblCompany", FormMethod.Get, new { @class = "Form-Horizontal" }))
{ 
    
    <div class="table">
        <div style="clear:both;"></div>
        <table id="dataTable" class="use-dataTable table table-bordered table-condensed table-hover table-striped tablesorter">
            <thead>
            <tr>
         
                <th class="text_center no_sort ">@Eagle.Resource.LanguageResource.No</th>
                
                <th>
                    @Eagle.Resource.LanguageResource.CompanyCode
                </th>
                <th>
                    @Eagle.Resource.LanguageResource.Name
                </th>
                <th>
                    @Eagle.Resource.LanguageResource.VNName
                </th>
                <th>
                    @Eagle.Resource.LanguageResource.Address
                </th>
                <th>
                    @Eagle.Resource.LanguageResource.Phone
                </th>
                <th>
                    @Eagle.Resource.LanguageResource.Fax
                </th>
                <th>
                    @Eagle.Resource.LanguageResource.Used
                </th>
                <th class="table-actions text_center">@Eagle.Resource.LanguageResource.Actions</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @item.LSCompanyCode
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.VNName
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        @item.Phone
                    </td>
                    <td class="text-center"> 
                         @item.Fax
                    </td>
                     <td class="text-center"> 
                         @item.strUsed
                    </td>
                    <td class="center action">
                        <a data-id="@item.LSCompanyID"  title="Edit" class="ico edit editItem">&nbsp;&nbsp;&nbsp;</a>
                    </td>
                </tr>
            }
        </tbody>
</table>
        <div style="clear:both"></div>
    </div>
}
<script>
    InvokeDataTables();
</script>
   