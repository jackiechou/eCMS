@model List<SalaryAdjustModelView>

<div class="table">
    <table id="dataTable" class="use-dataTable table table-bordered table-condensed table-hover table-striped tablesorter sortableTable">
        <thead>
            <tr>
                <th class="text_center">@Eagle.Resource.LanguageResource.No</th>
                <th>
                    @Eagle.Resource.LanguageResource.Code
                </th>
                <th>
                    @Eagle.Resource.LanguageResource.Name
                </th>
                <th>
                    @Eagle.Resource.LanguageResource.VNName
                </th>
                <th>
                    @Eagle.Resource.LanguageResource.PR_TypeAdd
                </th>
                <th>
                    @Eagle.Resource.LanguageResource.BeforeTax
                </th>
                @*<th>
                    @Eagle.Resource.LanguageResource.PR_AddSalary
                </th>
                <th>
                    @Eagle.Resource.LanguageResource.PR_SalaryType
                </th>                                *@
                <th>
                    @Eagle.Resource.LanguageResource.PR_MaxNonePIT
                </th>
                <th>
                    @Eagle.Resource.LanguageResource.Used
                </th>
                <th class="table-actions text_center no-sort">@Eagle.Resource.LanguageResource.Actions</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @item.LSSalaryAdjustCode
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.VNName
                    </td>
                    <td class="text_center">
                        @item.TypeAddInfo
                    </td>
                    <td>
                        @item.PITInfo
                    </td>
                   @* <td>
                        @item.AddSalaryInfo
                    </td>
                    <td>
                        @item.TypeInfo
                    </td>*@
                    <td>
                        @item.MaxNoPITInfo
                    </td>
                    <td>
                        @item.UsedInfo
                    </td>
                    <td class="table-actions text_center no-sort">
                        <a data-id="@item.LSSalaryAdjustID"  title="Edit" class="ico editItem " >&nbsp;&nbsp;&nbsp;</a>
                        <a data-id="@item.LSSalaryAdjustID"  title="Delete" class="ico deleteItem ">&nbsp;&nbsp;&nbsp;</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

