@model SearchForPayrollViewModels
<!--Begin search -->
<!--start row-->
<div class="row">
    <div class="col-md-2">
        @Html.LabelFor(model => model.EmpCode)
    </div>
    <div class="col-md-4">
        @Html.TextBoxFor(model => model.EmpCode, new { @Id = "SearchEmpCode", @class = "span12" })
    </div>
    <div class="col-md-2">
        @Html.LabelFor(model => model.FullName)
    </div>
    <div class="col-md-4">
        @Html.TextBoxFor(model => model.FullName, new { @Id = "SearchFullName", @class = "span12" })
    </div>
</div>
<!--end row-->
<!--start row-->
<div class="row">
    <div class="col-md-2">
        <label>
            @Eagle.Resource.LanguageResource.LastCompanyDefine
        </label>
    </div>
    <div class="col-md-4">
        <select id="LSCompanyID" name="LSCompanyID" class="easyui-combotree span2"></select>
        <script type="text/javascript">
            LoadComboTree('LSCompanyID');
            function LoadComboTree(controlId) {
                $('#' + controlId).combotree({
                    url: '/CommonCompany/GetAll',
                    textField: 'title',
                    valueField: 'id',
                    onLoadSuccess: function (row, data) {
                        $(this).tree("collapseAll");
                    },
                    onSelect: function (node) {
                    }
                });
            }
        </script>
    </div>
    <div class="col-md-2">
        @Html.RequiredLabelFor(model => model.MMYYYY)
    </div>
    <div class="col-md-4">
        <label class="reset-label">
            @Html.MonthPickerFor(model => model.MMYYYY, null, new { @name = "MMYYYY" })
            @Html.ValidationMessageFor(model => model.MMYYYY)
        </label>
    </div>
</div>
<!--end row-->
<!--End search -->
