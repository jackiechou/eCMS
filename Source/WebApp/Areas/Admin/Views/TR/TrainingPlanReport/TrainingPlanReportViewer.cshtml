@Html.DevExpress().ReportViewer(settings =>
{
    settings.Name = "reportViewer1";
    settings.Report = (TrainingPlanXtraReport)ViewData["Report"];
    settings.AutoSize = false;
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.Height = 1000;    
    settings.Attributes.Add("class", "reportViewer");
    settings.CallbackRouteValues = new { Controller = "TrainingPlanReport", Action = "LoadTrainingPlanReportViewer", Month = ViewBag.Month, Year = ViewBag.Year };
    settings.ExportRouteValues = new { Controller = "TrainingPlanReport", Action = "ExportTrainingPlanData", Month = ViewBag.Month, Year = ViewBag.Year };      
}).GetHtml()
