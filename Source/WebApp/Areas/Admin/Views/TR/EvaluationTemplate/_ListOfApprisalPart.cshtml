@model List<EvaluationTemplateDetailViewModel>

<table id="dataTableDuration" class="use-dataTable table table-bordered table-condensed table-hover table-striped tablesorter sortableTable">
    <thead>
        <tr>
            <th class="text_center" style="width:5%">@Eagle.Resource.LanguageResource.No</th>
            <th class="text_center" style="width:90%">
                @Eagle.Resource.LanguageResource.TrainingApprisalPartName
            </th>
            <th class="text_center" style="width:5%">
                @Html.CheckBox("chkAll", @ViewBag.EvaluationTemplateID == 0 ? true : false)
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            int k = -1;
            int j = -1;   
        }
        @foreach (var detail in Model)
        {
            i++;
            k++;
            <input type="hidden" name="[@k].EvaluationTemplateID" value="@detail.EvaluationTemplateID" />
            <input type="hidden" name="[@k].LSTrainingApprisalPartID" value="@detail.LSTrainingApprisalPartID" />
            <tr id="@k">
                <td class="text_center">
                    @i
                </td>
                <td style="width:100%">
                    @detail.LSTrainingApprisalPartName
                </td>
                <td class="table-actions text_center no-sort">
                    @Html.CheckBox(String.Format("[{0}].Checked",@k), detail.Checked.Value)
                </td>
            </tr>        
             
            int z = 1;
            foreach (var item in detail.ListOfTrainingApprisalItem)
            {
                j++;               
                <input type="hidden" name="[@j].Item_TemplateItemID" value="@item.Item_TemplateItemID" />
                <input type="hidden" name="[@j].Item_EvaluationTemplateID" value="@item.Item_EvaluationTemplateID" />
                <input type="hidden" name="[@j].Item_LSTrainingApprisalItemID" value="@item.Item_LSTrainingApprisalItemID" />
                <input type="hidden" name="[@j].Item_LSTrainingApprisalPartID" value="@item.Item_LSTrainingApprisalPartID" />
                <tr>
                    <td></td>
                    <td>@i.@z&nbsp;&nbsp;&nbsp;@item.Name</td>
                    <td class="table-actions text_center no-sort">
                        @Html.CheckBox(String.Format("[{0}].Item_Checked",@j), item.Checked.Value)
                    </td>
                </tr>             
                z++;   
            }
        }
    </tbody>
</table>




