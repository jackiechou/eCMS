@model EmployeeViewModel
<div id="briefInfo">
    <div class="box2 accordion-group">
        <div class="accordion-heading toolbar">
            <a href="#top_accordion" data-parent="#accordion2" data-toggle="collapse" class="accordion-toggle">
                <span class="pull-right"><i class="icon-chevron-up icon-white"></i></span>
                <span class="heading-tite">@Eagle.Resource.LanguageResource.CurrentInfo</span>
            </a>
        </div>
        <div class="accordion-body collapse in" id="top_accordion">
            <div class="accordion-inner">
                <div class="accordion-content">
                    <!--start row-->
                    <div class="row">
                        <div class="col-md-2">
                            <label>@Html.LabelFor(model => model.LSLocationID)</label>
                        </div>
                        <div class="col-md-4 line_bottom">
                                @Html.DisplayFor(model => model.LSLocationName, new { @class = "reset-label" })
                        </div>
                        <div class="col-md-2">
                            @Html.LabelFor(model => model.JoinDate)
                        </div>
                        <div class="col-md-4 line_bottom">
                            @Html.DisplayFor(model => model.JoinDate, new { @class = "reset-label" })
                        </div>
                    </div>
                    <!--end row-->
                    <!--start row-->
                    <div class="row">
                        <div class="col-md-2">
                            <label>@Html.LabelFor(model => model.Mobile)</label>
                        </div>
                        <div class="col-md-4 line_bottom">
                            @Html.DisplayFor(model => model.Mobile, new { @class = "reset-label" })
                        </div>
                        <div class="col-md-2">
                            @Html.LabelFor(model => model.Active)
                        </div>
                        <div class="col-md-4 line_bottom">                            
                            @Html.DisplayFor(model => model.Active, new { @class = "reset-label" })
                        </div>
                    </div>
                    <!--end row-->
                </div>
            </div>
        </div>
    </div>
</div>
