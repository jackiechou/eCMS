@model  TrainingApprisalItemViewModel

<form id="frmAdd" class="form-horizontal">         
     <div id="alertMessageBox">
        @if (ViewBag.DisplayErrorMessage == true)
        {
            <div class="@ViewBag.CssClass">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <strong>@ViewBag.SortMessage !</strong>
                <div class="padding-left">
                    @Html.Raw(Server.HtmlDecode(ViewBag.Message))
                </div>
            </div>
        }
    </div>
    <div class="box">
        <div class="row">            
            <div id="right_accordion" class="accordion-group">
                 <div class="accordion-heading toolbar">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                        <span class="pull-right"><i class="glyphicon glyphicon-chevron-up icon-white"></i></span>
                        <span class="heading-tite">@Eagle.Resource.LanguageResource.InputArea</span>
                    </a>
                </div>
                <div id="form_accordion" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <div class="accordion-content">
                            @Html.HiddenFor(model => model.LSTrainingApprisalItemID)
                            @Html.HiddenFor(model => model.InitialTrainingApprisalItem)
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.LSTrainingApprisalItemCode)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.LSTrainingApprisalItemCode, new { @class = "form-control" }) 
                                    @Html.ValidationMessageFor(model => model.LSTrainingApprisalItemCode)                                 
                                </div>
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.Name)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" }) 
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">                              
                                    @Html.RequiredLabelFor(model => model.LSTrainingApprisalPartID)          
                                </div>
                                <div class="col-md-4">     
                                    @Html.DropDownListFor(model => model.LSTrainingApprisalPartID, null, new { @class = "form-control" }) 
                                    @Html.ValidationMessageFor(model => model.LSTrainingApprisalPartID)                                      
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.IsMultiAnswer)
                                </div>
                                <div class="col-md-4">
                                    @Html.CheckBox("IsMultiAnswer", Model.IsMultiAnswer.HasValue ? Model.IsMultiAnswer.Value : false )
                                </div>                                
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                     @Html.LabelFor(model => model.Used)                                      
                                </div>
                                <div class="col-md-4">
                                     @Html.CheckBox("Used")
                                </div>
                                   <div class="col-md-2">
                                     @Html.LabelFor(model => model.Rank)
                                </div>
                                <div class="col-md-4">
                                     @Html.TextBoxFor(model => model.Rank, new { @class = "form-control" }) 
                                     @Html.ValidationMessageFor(model => model.Rank)                                 
                                </div>      
                             </div>                          
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Note)
                                </div>
                                <div class="col-md-10">                                          
                                    @Html.TextAreaFor(model => model.Note, new { @class = "form-control" })                                   
                                </div>
                            </div>                                                                                                          
                        </div>
                        <div class="row">
                            <div class="col-md-2"><h6>@Eagle.Resource.LanguageResource.TrainingAnswerType</h6></div>                                 
                            <div class="col-md-10" align="right">                                    
                                <input id="btnAddRow" type="button" class="btn-custom-addrow" style="margin-right: 18px;" />
                            </div>                                                                                                 
                        </div> 
                        <div id="divListOfTrainingAnswer">
                            @Html.Action("ListOfTrainingAnswer")
                        </div>
                        <div class="row">
                                <div class="footbar">
                                    <input type="button" id="btnReset" value="@Eagle.Resource.LanguageResource.btnReset" class="btn" />
                                    <input type="button" id="btnAdd" value="@Eagle.Resource.LanguageResource.btnSave" class="btn btn-info AddModel" />
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>




