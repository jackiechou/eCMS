@model TrainingEvaluationViewModel

<div class="form-horizontal">              
    <div id="alertMessageBox">
        @if (ViewBag.DisplayErrorMessage == true)
        {
            <div class="@ViewBag.CssClass">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <strong>@ViewBag.SortMessage !</strong>
                <div class="padding-left">
                   @Html.Raw(Server.HtmlDecode(ViewBag.Message))
                </div>
            </div>
        }
    </div>
    <div class="box">
        <div class="row">            
            <div id="right_accordion" class="accordion-group">
                <div class="accordion-heading toolbar">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                        <span class="pull-right"><i class="glyphicon glyphicon-chevron-up icon-white"></i></span>
                        <span class="heading-tite">@Eagle.Resource.LanguageResource.InputArea</span>
                    </a>
                </div>
                <div id="form_accordion" class="accordion-body collapse in">
                     <form id="frmAdd" class="accordion-inner">
                        <div id="divAdd" class="accordion-content">     
                            @Html.HiddenFor(model => model.TrainingEvaluationID)  
                            @Html.HiddenFor(model => model.TrainingRequestID)                            
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.EvaluationEmpID)
                                </div>
                                <div class="col-md-4">
                                    <label class="reset-label"><b>@Model.EvaluationEmpName</b></label>
                                </div>
                                <div class="col-md-2">
                                     @Html.LabelFor(model => model.EvaluationTemplateID)
                                </div>
                                <div class="col-md-4">
                                    <label class="reset-label"><b>@Model.EvaluationTemplateName</b></label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.TrainingCode)
                                </div>
                                <div class="col-md-4">
                                    <label class="reset-label"><b>@Model.TrainingCode</b></label>
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.TrainingCourseName)
                                </div>
                                <div class="col-md-4">
                                    <label class="reset-label"><b>@Model.TrainingCourseName</b></label>
                                </div>
                            </div>                                                                                                                                                                                                                                                                                           
                        </div>
                        <div id="divListOfApprisalPart" class="accordion-content">                            
                            @Html.Action("ListOfTrainingEvaluationPart", new { @TrainingRequestID = Model.TrainingRequestID}) 
                        </div>               
                     </form>                     
                     <div>
                        <div class="row">
                            <div class="footbar">                                
                                <input type="button" id="btnAdd" value="@Eagle.Resource.LanguageResource.btnSave" @ViewBag.NotAllowUpdate class="btn btn-info add AddModel" />            
                                <input type="button" id="btnComplete" value="@Eagle.Resource.LanguageResource.btnComplete" @ViewBag.NotAllowUpdate class="btn btn-info add AddModel" />
                                <input type="button" id="btnListOfEvaluation" value="@Eagle.Resource.LanguageResource.btnListOfEvaluation" class="btn btn-info add AddModel" />
                            </div>
                        </div>
                        <!--End.row-->
                    </div>
                </div>
            </div>
        </div>         
    </div>        
</div>

<script>
    var strInputEvaluationTemplateName = '@Html.Raw(Eagle.Resource.LanguageResource.PleaseInputEvaluationTemplate)';
    PopulateDropDownListAutoComplete("SelectEvaluationTemplateID", "EvaluationTemplateID", "EvaluationTemplateName", strInputEvaluationTemplateName, areas + '/EvaluationTemplate/DropdownList');    
</script>






