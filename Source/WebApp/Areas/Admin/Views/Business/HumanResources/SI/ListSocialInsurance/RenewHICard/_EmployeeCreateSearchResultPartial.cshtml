@model IEnumerable<EmployeeViewModel>
    <table id="dataTable" class="use-dataTable table table-bordered table-condensed table-hover table-striped tablesorter sortableTable">
        @{int i = 0;}
        @if (Model != null && Model.Count() > 0)
	    {
        <thead>
            <tr>
                <th class="text_center">@Eagle.Resource.LanguageResource.No</th>
                <th>
                    @Html.DisplayNameFor(model => model.EmpCode)
                </th>
                <th style="min-width:100px">
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LSCompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LSPositionName)
                </th>
                <th class="table-actions text_center no-sort">@Html.CheckBox("chkSearchResultAll")</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td>
                            @i
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmpCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LSCompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Position)
                        </td>
                        
                        <td class="table-actions text_center no-sort">
                            @Html.CheckBox("chkEmpID", false, new { @value = item.EmpID }) 
                        </td>
                    </tr>
                }
       
        </tbody>
        }else
        {
            <tr>
                <td style="text-align:center">
                    @Eagle.Resource.LanguageResource.CouldNotFound
                </td>
            </tr>
        }

    </table>