@model IEnumerable<HICardViewModel>

    <div style="text-align:right;margin-bottom:5px;">
        <input id="btnAddHICard" type="button" class="btn btn-info" value="@Eagle.Resource.LanguageResource.AddNew" />
    </div>
    <div class="table">
        <table id="dataTable" class="use-dataTable table table-bordered table-condensed table-hover table-striped tablesorter sortableTable">
            <thead>
                <tr>
                    <th class="text_center">@Eagle.Resource.LanguageResource.No</th>
                    <th class="text_center">
                        @Html.DisplayNameFor(model => model.FromDate)
                    </th>
                    <th class="text_center">
                        @Html.DisplayNameFor(model => model.ToDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LSHospitalName)
                    </th>
                    <th class="table-actions text_center no-sort">@Eagle.Resource.LanguageResource.Actions</th>
                </tr>
            </thead>
            <tbody>
                @{int i = 0;}
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td class="text_center">
                            @i
                        </td>
                        <td class="text_center">
                            @Html.DisplayFor(modelItem => item.FromDate)
                        </td>
                        <td class="text_center">
                            @Html.DisplayFor(modelItem => item.ToDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LSHospitalName)
                        </td>
                        <td class="table-actions text_center no-sort">
                            <a data-id="@item.HICardID"  title="@Eagle.Resource.LanguageResource.Edit" class="ico editItem editHICard" >&nbsp;&nbsp;&nbsp;</a>
                            <a data-id="@item.HICardID"  title="@Eagle.Resource.LanguageResource.Delete" class="ico deleteItem deleteHICard">&nbsp;&nbsp;&nbsp;</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

