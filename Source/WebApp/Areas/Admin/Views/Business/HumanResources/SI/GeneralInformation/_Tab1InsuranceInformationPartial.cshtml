            </div>
        </div>
        <!--end row-->
        <!--start row-->
        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.IssuedDateHIBook)
            </div>
            <div class="col-md-4">
                @Html.DatepickerFor(model => model.IssuedDateHIBook)
            </div>
