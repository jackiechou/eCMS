                @Html.LabelFor(model => model.LSProvinceIDIssuedHI)
            </div>
            <div class="col-md-4">
                @Html.TextBox("SelectLSProvinceIDIssuedHI", null, new { @class = "form-control" })
                @Html.HiddenFor(model => model.LSProvinceIDIssuedHI)
                @Html.HiddenFor(model => model.LSProvinceIDIssuedHIName)
            </div>
        </div>
        <!--end row-->
        <!--start row-->
        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.StartDateHI)
            </div>
            <div class="col-md-4">
                @Html.DatepickerFor(model => model.StartDateHI)
            </div>
            <div class="col-md-2">
                @Html.LabelFor(model => model.LSHospitalIDNew)
            </div>
            <div class="col-md-4">
                <label class="reset-label" id="lblNewHospital">
                    @Html.DisplayFor(model => model.LSHospitalIDNewName, new { @class = "form-control" })
