            </div>
        </div>
        <!--end row-->
        <!--start row-->
        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.ReturnDateHI)
            </div>
            <div class="col-md-4">
                @Html.DatepickerFor(model => model.ReturnDateHI)
            </div>
        </div>
        <!--end row-->
        <!--start row-->
        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Note)
            </div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Note, new { @class = "form-control" })
            </div>
        </div>
        <!--end row-->
    </div>

@Html.Hidden("NowDate", DateTime.Now.ToString("dd/MM/yyyy"))
<script>
    PopulateDropDownListAutoComplete("SelectLSProvinceIDIssuedSI", "LSProvinceIDIssuedSI", "LSProvinceIDIssuedSIName", '@Html.Raw(Eagle.Resource.LanguageResource.PleaseInputProvinceName)', areas + '/LS_tblProvince/DropdownList');
    PopulateDropDownListAutoComplete("SelectLSProvinceIDIssuedHI", "LSProvinceIDIssuedHI", "LSProvinceIDIssuedHIName", '@Html.Raw(Eagle.Resource.LanguageResource.PleaseInputProvinceName)', areas + '/LS_tblProvince/DropdownList');
    PopulateDropDownListAutoComplete("SelectLSHospitalIDOriginal", "LSHospitalIDOriginal", "LSHospitalIDOriginalName", '@Html.Raw(Eagle.Resource.LanguageResource.PleaseInputHospitalName)', areas + '/Hospital/DropdownList');
    function checkQty() {

        var StartDateSItmp = $("#StartDateSItmp").val();
        var StartMonth = StartDateSItmp.substring(3, 5);
        var StartYear = StartDateSItmp.substring(6, 10);

        var JoinDateAtCompanyAlowNulltmp = $("#JoinDateAtCompanyAlowNulltmp").val();
        var JoinMonth = JoinDateAtCompanyAlowNulltmp.substring(3, 5);
        var JoinYear = JoinDateAtCompanyAlowNulltmp.substring(6, 10);

        var NowDate = $("#NowDate").val();
        var NowMonth = NowDate.substring(3, 5);
        var NowYear = NowDate.substring(6, 10);

        var yearsAgo = (JoinYear - StartYear) * 12 + (JoinMonth - StartMonth);
        var yearsAgo2 = (NowYear - StartYear) * 12 + (NowMonth - StartMonth);

        

        if (StartDateSItmp != '') {


            if (JoinDateAtCompanyAlowNulltmp != '') {
                $("#lblInsuranceYearsAgo").html(yearsAgo + " " + '@Eagle.Resource.LanguageResource.Months');
            }
            $("#lblInsuranceYears").html(yearsAgo2 + " " + '@Eagle.Resource.LanguageResource.Months');
        }
    }
    $(document).on("change", "#StartDateSI", function () {
        checkQty();
    })
    $(document).on("change", "#JoinDateAtCompanyAlowNull", function () {
        checkQty();
    })
    $(document).ready(function () {
        checkQty();
    });
</script>
