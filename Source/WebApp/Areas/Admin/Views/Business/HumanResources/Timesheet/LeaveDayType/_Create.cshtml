                                    <!-- start row -->
                                    <div class="row">
                                        <div class="col-md-2">
                                            @Html.RequiredLabelFor(model => model.LSLeaveTypeID)
                                        </div>
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(model => model.LSLeaveTypeID, new { @class = "form-control" })
