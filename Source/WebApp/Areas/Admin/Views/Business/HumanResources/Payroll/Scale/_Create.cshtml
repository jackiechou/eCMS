@model Eagle.Model.ScaleCreateViewModels

<form id="frmAdd" class="form-horizontal">
    @Html.HiddenFor(model => model.SalaryScaleID)
    <div id="alertMessageBox">
       @if (ViewBag.DisplayErrorMessage == true)
        {
            <div class="@ViewBag.CssClass">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <strong>@ViewBag.SortMessage !</strong>
                <div class="padding-left">
                    @Html.Raw(Server.HtmlDecode(ViewBag.Message))
                </div>
            </div>
        }
    </div>
    <div class="box">
        <div class="row">

            <div id="right_accordion" class="accordion-group">
                <div class="accordion-heading toolbar">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                        <span class="pull-right"><i class="glyphicon glyphicon-chevron-up icon-white"></i></span>
                        <span class="heading-tite">Input region</span>
                    </a>
                </div>
                <div id="form_accordion" class="accordion-body collapse in">
                        <div class="accordion-inner">
                            <div class="accordion-content">
                                <!--start row-->
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.RequiredLabelFor(model => model.SalaryScaleCode)
                                    </div>
                                    <div class="col-md-4">
                                            @Html.TextBoxFor(model => model.SalaryScaleCode, new { @autocomplete = "off", @placeholder = @Eagle.Resource.LanguageResource.Code, @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.SalaryScaleCode)
                                     
                                    </div>
                                    <div class="col-md-2">
                                       
                                    </div>
                                    <div class="col-md-4">
                                       
                                    </div>
                                    
                                </div>
                                <!--end row-->
                                <!--start row-->
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.RequiredLabelFor(model => model.Name)
                                    </div>
                                    <div class="col-md-4">
                                            @Html.TextBoxFor(model => model.Name, new { @autocomplete = "off", @placeholder = @Eagle.Resource.LanguageResource.Name, @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Name)
                                     
                                    </div>
                                    <div class="col-md-2">
                                        @Html.RequiredLabelFor(model => model.VNName)
                                    </div>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.VNName, new { @autocomplete = "off", @placeholder = @Eagle.Resource.LanguageResource.VNName, @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.VNName)
                                    </div>
                                    
                                </div>
                                <!--end row-->
                                <!--start row-->
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.RequiredLabelFor(model => model.Rank)
                                    </div>
                                    <div class="col-md-3">
                                            @Html.TextBoxFor(model => model.Rank, new { @autocomplete = "off", @placeholder = @Eagle.Resource.LanguageResource.Rank, @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Rank)
                                     
                                    </div>
                                    <div class="col-md-3">
                                        @Html.LabelFor(model => model.Used)
                                    </div>
                                    <div class="col-md-4">
                                        @Html.CheckBox("Used")
                                        @Html.ValidationMessageFor(model => model.Used)
                                    </div>
                                    
                                </div>
                                <!--end row-->
                                 <!--start row-->
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.Note)
                                    </div>
                                    <div class="col-md-10">
                                            @Html.TextAreaFor(model => model.Note, new { @autocomplete = "off", @placeholder = @Eagle.Resource.LanguageResource.Note, @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Note)
                                    </div>
                                </div>
                                <!--end row-->
                            </div>
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="footbar">
                                <div>
                                    <input class="btn ResetModel" type="button" id="btnReset" value="@Eagle.Resource.LanguageResource.btnReset" />
                                    <input class="btn btn-info AddModel" type="button" id="btnAdd" value="@Eagle.Resource.LanguageResource.btnSave" />
                                </div>
                            </div>
                        </div>
                        <!--End.row-->
                </div>
            </div>
        </div>
    </div>
</form>


