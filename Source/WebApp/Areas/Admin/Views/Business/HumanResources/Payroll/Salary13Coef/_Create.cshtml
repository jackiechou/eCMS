@model Salary13CoefViewModel

<div class="form-horizontal">              
    <div id="alertMessageBox">
        @if (ViewBag.DisplayErrorMessage == true)
        {
            <div class="@ViewBag.CssClass">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <strong>@ViewBag.SortMessage !</strong>
                <div class="padding-left">
                   @Html.Raw(Server.HtmlDecode(ViewBag.Message))
                </div>
            </div>
        }
    </div>
    <div class="box">
        <div class="row">            
            <div id="right_accordion" class="accordion-group">
                <div class="accordion-heading toolbar">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                        <span class="pull-right"><i class="glyphicon glyphicon-chevron-up icon-white"></i></span>
                        <span class="heading-tite">@Eagle.Resource.LanguageResource.InputArea</span>
                    </a>
                </div>
                <div id="form_accordion" class="accordion-body collapse in">
                     <form id="frmAdd" class="accordion-inner">
                        <div id="divAdd" class="accordion-content">     
                            @Html.HiddenFor(model => model.SalaryCoefID)                              
                            <h6>@Eagle.Resource.LanguageResource.Salary13CoefEmployee</h6>
                            <hr />                                                        
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.EmployeeCode)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.EmployeeCode, null, new { @class = "form-control"})
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => Model.EmloyeepName)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.EmloyeepName, null, new { @class = "form-control"})
                                </div>
                            </div> 
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.LSCompanyID)
                                </div>
                                <div class="col-md-4">
                                    @Html.HiddenFor(model => model.CompanyName)
                                    @{ 
                                        string LSCompanyID = String.Empty;
                                        if (Model.LSCompanyID == 0)
                                        {
                                            LSCompanyID = Eagle.Resource.LanguageResource.PleaseInputCompanyName;
                                        }
                                        else
                                        {
                                            LSCompanyID = Model.LSCompanyID.ToString();
                                        }
                                    }  
                                    <select id="LSCompanyIDTree" name="LSCompanyIDTree" class="easyui-combotree col-md-2"></select>    
                                    <script>
                                        LoadComboTreeWithActionWithValue('LSCompanyIDTree', 'GetAll', '@LSCompanyID');
                                    </script>
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.LSPositionID)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBox("SelectLSPositionID", null, new { @class = "form-control" })                                        
                                    @Html.HiddenFor(model => model.LSPositionID)   
                                    @Html.HiddenFor(model => model.PositionName)
                                </div>
                            </div>         
                            <h6>@Eagle.Resource.LanguageResource.Salary13CoefInformation</h6>
                            <hr />                                               
                            <div class="row">
                                <div  class="col-md-2">
                                    @Html.LabelFor(model => model.Year)
                                </div>
                                <div  class="col-md-1">
                                    @Html.DropDownList("Year")
                                </div>
                                <div class="col-md-1">
                                    @Html.LabelFor(model => model.CalMonth)
                                </div>
                                <div  class="col-md-2">
                                    @Html.DropDownList("CalMonth")
                                </div>
                                <div class="col-md-1">
                                    @Html.LabelFor(model => model.Coef)
                                </div>
                                <div class="col-md-1">
                                    @Html.TextBoxFor(mode => Model.Coef, null, new { @class = "form-control" } )
                                </div>                                
                                <div class="col-md-4" align="center">
                                    <label style="display: inline; margin-right: 10px;">@Html.RadioButton("optSetting", 1, (@Model.IsSetting == 1 ? true : false), new { id = "optSetting1" }) @Eagle.Resource.LanguageResource.Salary13CoefSetting </label>
                                    <label style="display: inline; margin-right: 10px;">@Html.RadioButton("optSetting", 0, (@Model.IsNoSetting == 1 ? true : false), new { id = "optSetting0" }) @Eagle.Resource.LanguageResource.Salary13CoefNoSetting </label>
                                </div>
                            </div>                                                                                                                                                                                                                                                        
                        </div>
                        <div id="divListOfApprisalPart" class="accordion-content">
                            
                        </div>               
                     </form>                     
                     <div>
                        <div class="row">
                            <div class="footbar">
                                <input type="button" id="btnReset" value="@Eagle.Resource.LanguageResource.btnReset" @ViewBag.NotAllowUpdate class="btn"/>                                                                        
                                <input type="button" id="btnAdd" value="@Eagle.Resource.LanguageResource.btnSave" class="btn btn-info AddModel" />                                            
                                <input type="button" id="btnSearch" value="@Eagle.Resource.LanguageResource.btnSearch" class="btn btn-info AddModel" />                                                                    
                            </div>
                        </div>
                        <!--End.row-->
                    </div>
                </div>
            </div>
        </div>         
    </div>        
</div>

<script>
    var strInputInputPositionName = '@Html.Raw(Eagle.Resource.LanguageResource.PleaseInputPositionName)';
    PopulateDropDownListAutoComplete("SelectLSPositionID", "LSPositionID", "PositionName", strInputInputPositionName, areas + '/LS_tblPosition/DropdownList');
</script>






