@model SalaryAdjustModelView

<form id="frmAdd" class="form-horizontal">
    @Html.HiddenFor(model => model.LSSalaryAdjustID)
    @Html.HiddenFor(model => model.InitialSalaryAdjust)

    <div id="alertMessageBox">
        @if (ViewBag.DisplayErrorMessage == true)
        {
            <div class="@ViewBag.CssClass">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <strong>@ViewBag.SortMessage !</strong>
                <div class="padding-left">
                    @Html.Raw(Server.HtmlDecode(ViewBag.Message))
                </div>
            </div>
        }
    </div>
    <div class="box">
        <div class="row">
            <div id="right_accordion" class="accordion-group">
                <div class="accordion-heading toolbar">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                        <span class="pull-right"><i class="glyphicon glyphicon-chevron-up icon-white"></i></span>
                        <span class="heading-tite">@Eagle.Resource.LanguageResource.InputArea</span>
                    </a>
                </div>
                <div id="form_accordion" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <div class="accordion-content">
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.LSSalaryAdjustCode)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.LSSalaryAdjustCode, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.LSSalaryAdjustCode)
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.PIT)
                                </div>
                                <div class="col-md-4">
                                    @Html.CheckBox("PIT")
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.Name)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.VNName)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.VNName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.VNName)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.TypeAdd)
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownList("TypeAdd", null, new { @class = "form-control" })
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.MaxNonPIT)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.MaxNonPIT, new { @autocomplete = "off", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.MaxNoPITInfo)
                                </div>

                            </div>
                            @* <div class="row">
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.AddSalary)
                                </div>
                                <div class="col-md-4">
                                    @Html.CheckBox("AddSalary")
                                </div>
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.Type)
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownList("Type", null, new { @class = "form-control" })
                                </div>
                            </div>*@

                            <div class="row">

                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Rank)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.Rank, new { @autocomplete = "off", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Rank)
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Used)
                                </div>
                                <div class="col-md-4">
                                    @Html.CheckBox("Used")
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Note)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextAreaFor(model => model.Note, new { @class = "input-xxlarge" })
                                </div>
                            </div>

                            <!--/row-->
                            <div class="row">
                                <div class="footbar">
                                    <input type="button" id="btnReset" value="@Eagle.Resource.LanguageResource.btnReset" class="btn" />
                                    <input type="button" id="btnAdd" value="@Eagle.Resource.LanguageResource.btnSave" class="btn btn-info AddModel" />
                                </div>
                            </div>
                            <!--End.row-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



