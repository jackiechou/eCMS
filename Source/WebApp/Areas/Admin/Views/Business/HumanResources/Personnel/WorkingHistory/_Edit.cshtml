@model Eagle.Model.HR.WorkingHistoryViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "myform", name = "myform", autocomplete = "off", @class = "form-horizontal" }))
{
    @*Click Button to pick data from grid in popup *@
    @Html.Action("GetEmployeeInfo", "Employee", null)
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true);
    <div id="alertMessageBox">
        @if (ViewBag.DisplayErrorMessage == true)
        {
            <div class="@ViewBag.CssClass">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <strong>@ViewBag.SortMessage!</strong>
                <div class="padding-left">
                    @Html.Raw(Server.HtmlDecode(ViewBag.Message))
                </div>
            </div>
        }
    </div>
    <div class="box">
        <div class="row">
            <div id="right_accordion" class="accordion-group">
                <div class="accordion-heading toolbar">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                        <span class="pull-right"><i class="glyphicon glyphicon-chevron-up icon-white"></i></span>
                        <span class="heading-tite">@Eagle.Resource.LanguageResource.FormArea</span>
                    </a>
                </div>
                <div id="form_accordion" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <div class="accordion-content">
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.WorkFor)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.WorkFor, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.WorkFor)
                                    @Html.HiddenFor(model => model.WorkingHistoryID, new { @id = "WorkingHistoryID" })
                                </div>

                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.Position)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.Position, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Position)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.Duty)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.Duty, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Duty)
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.LeaveReason)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.LeaveReason, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.FromDate)
                                </div>
                                <div class="col-md-4">
                                    @Html.DateTimePickerFor(model => model.FromDate)
                                    @Html.ValidationMessageFor(model => model.FromDate)
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.ToDate)
                                </div>
                                <div class="col-md-4">
                                    @Html.DateTimePickerFor(model => model.ToDate)
                                    @Html.ValidationMessageFor(model => model.ToDate)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.ContactPersonName)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.ContactPersonName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ContactPersonName)
                                </div>

                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.FormerCompanyAddress)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.FormerCompanyAddress, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.FormerCompanyAddress)
                                </div>                               
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.ContactPersonPosition)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.ContactPersonPosition, new { @class = "form-control" })
                                </div>

                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.ContactPersonPhone)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.ContactPersonPhone, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.ContactPersonEmail)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.ContactPersonEmail, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Note)
                                </div>
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.Note, new { rows = 2, columns = 40, maxlength=150,@class = "form-control" })
                                </div>
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="footbar">
                                    <input type="button" id="btnReset" value="@Eagle.Resource.LanguageResource.btnReset" class="btn" />
                                    <input type="button" id="btnEdit" value="@Eagle.Resource.LanguageResource.btnSave" class="btn btn-info edit" />                                    
                                </div>
                            </div>
                            <!--End.row-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
