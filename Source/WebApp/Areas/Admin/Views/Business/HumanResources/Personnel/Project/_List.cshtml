@model IEnumerable<Eagle.Model.HR.ProjectViewModel>
<div class="table datatable">
    <table id="dataTable" class="use-dataTable table table-bordered table-condensed table-hover table-striped tablesorter sortableTable">
        <thead>
            <tr>
                <th class="text_center">@Eagle.Resource.LanguageResource.No</th>
                @*<th>
                        @Html.DisplayNameFor(model => model.ProjectID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmpID)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.ProjectCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FromMonth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ToMonth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MainWork)
                </th>
                <th class="table-actions text_center no-sort">@Eagle.Resource.LanguageResource.Actions</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>
                        @i
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.ProjectID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmpID)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FromMonth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ToMonth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MainWork)
                    </td>
                    <td class="table-actions text_center center no-sort">
                        <a data-id="@item.ProjectID" title="Edit" class="ico editItem ">&nbsp;&nbsp;&nbsp;</a>
                        <a data-id="@item.ProjectID" title="Delete" class="ico deleteItem ">&nbsp;&nbsp;&nbsp;</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>