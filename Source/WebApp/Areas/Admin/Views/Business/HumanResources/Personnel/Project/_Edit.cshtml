@model Eagle.Model.HR.ProjectViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "myform", name = "myform", autocomplete = "off", @class = "form-horizontal" }))
{
    @*Click Button to pick data from grid in popup *@
    @Html.Action("GetEmployeeInfoByEmpID", "Employee", new { EmpID = Model.EmpID })
    
    <div id="alertMessageBox">
        @if (ViewBag.DisplayErrorMessage == true)
        {
            <div class="@ViewBag.CssClass    ">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <strong>@ViewBag.SortMessage     !</strong>
                <div class="padding-left">
                    @Html.Raw(Server.HtmlDecode(ViewBag.Message))
                </div>
            </div>
        }
    </div>
    <div class="box">
        <div class="row">
            <div id="right_accordion" class="accordion-group">
                <div class="accordion-heading toolbar">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                        <span class="pull-right"><i class="glyphicon glyphicon-chevron-up icon-white"></i></span>
                        <span class="heading-tite">@Eagle.Resource.LanguageResource.InputArea    </span>
                    </a>
                </div>
                <div id="form_accordion" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <div class="accordion-content">
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.ProjectCode)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.ProjectCode, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ProjectCode)
                                    @Html.HiddenFor(model => model.ProjectID, new { @id = "ProjectID" })
                                </div>

                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Position)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.Position, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.ProjectName)
                                </div>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.ProjectName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ProjectName)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.FromMonth)
                                </div>
                                <div class="col-md-4">
                                    @Html.MonthPickerFor(model => model.FromMonth)
                                    @Html.ValidationMessageFor(model => model.FromMonth)
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.ToMonth)
                                </div>
                                <div class="col-md-4">
                                    @Html.MonthPickerFor(model => model.ToMonth)
                                    @Html.ValidationMessageFor(model => model.ToMonth)
                                </div>
                            </div>

                            <div class="row">

                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.MainWork)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextAreaFor(model => model.MainWork, new { @class = "form-control", @cols = "20", @rows = "3" })
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Note)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextAreaFor(model => model.Note, new { @class = "form-control", @cols = "20", @rows = "3" })
                                </div>
                            </div>

                            <!--/row-->
                            <div class="row">
                                <div class="footbar">
                                    <input type="button" id="btnReset" value="@Html.Raw(Eagle.Resource.LanguageResource.btnReset)" class="btn" />
                                    <input type="button" id="btnEdit" value="@Html.Raw(Eagle.Resource.LanguageResource.btnSave)" class="btn btn-info edit" />                                   
                                </div>
                            </div>
                            <!--End.row-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}