@model Eagle.Model.HR.ContractEditModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "createform_contract", name = "createform_contract", autocomplete = "off", @class = "form-horizontal" }))
{
     @Html.AntiForgeryToken()
     @Html.ValidationSummary(true)
    <div id="alertMessageBox">
        @if (ViewBag.DisplayErrorMessage == true)
        {
            <div class="@ViewBag.CssClass">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <strong>@ViewBag.SortMessage !</strong>
                <div class="padding-left">
                    @Html.Raw(Server.HtmlDecode(ViewBag.Message))
                </div>
            </div>
        }
    </div>
    <div class="form-horizontal">        
        <div class="row">
            <div id="right_accordion" class="accordion-group">
                <div class="accordion-heading toolbar">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                        <span class="pull-right"><i class="icon-chevron-up icon-white"></i></span>
                        <span class="heading-tite">@Html.Raw(Eagle.Resource.LanguageResource.FormArea)</span>
                    </a>
                </div>
                <div id="form_accordion" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <div class="accordion-content">
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.ContractNo)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.ContractNo, new { @class = "span12 ignore" })
                                    @Html.ValidationMessageFor(model => model.ContractNo)
                                </div>

                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.LSContractTypeID)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBox("selectLSContractTypeID", null, new { @class = "form-control" })
                                    @Html.HiddenFor(model => model.LSContractTypeID)
                                    @Html.Hidden("LSContractTypeName")
                                    @Html.ValidationMessageFor(model => model.LSContractTypeID)
                                </div>
                            </div>

                            <div class="row"> 
                                  <div class="col-md-2">
                                    @Html.LabelFor(model => model.SignedDate)
                                </div>
                                <div class="col-md-4">
                                    @Html.DateTimePickerFor(model => model.SignedDate,null,DateTime.Now.ToString("dd/MM/yyyy"))
                                    @Html.ValidationMessageFor(model => model.SignedDate)
                                </div>                              
                               <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.ContractStatus)
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownList("ContractStatus", null, new { @class = "form-control" })
                                </div>  
                            </div>
                            <div class="row">                               
                                 <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.EffectiveDate)
                                </div>
                                <div class="col-md-4">
                                    @Html.DateTimePickerFor(model => model.EffectiveDate,null,DateTime.Now.AddDays(1).ToString("dd/MM/yyyy"))
                                    @Html.ValidationMessageFor(model => model.EffectiveDate)
                                </div>
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.PositionID)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBox("selectPosition", null, new { @class = "form-control" })
                                    @Html.HiddenFor(model => model.PositionID)
                                    @Html.Hidden("PositionName")
                                    @Html.ValidationMessageFor(model => model.PositionID)
                                </div>                                     
                            </div>

                            <div class="row">
                                  <div class="col-md-2">
                                    @Html.LabelFor(model => model.ExpiredDate)
                                </div>
                                <div class="col-md-4">
                                    @Html.DateTimePickerFor(model => model.ExpiredDate,null,DateTime.Now.AddDays(1).AddYears(1).ToString("dd/MM/yyyy"))
                                </div>
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.LocationID)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBox("selectLocation", null, new { @class = "form-control" })
                                    @Html.HiddenFor(model => model.LocationID)
                                    @Html.Hidden("LocationName")
                                    @Html.ValidationMessageFor(model => model.LocationID)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.ProbationFrom)
                                </div>
                                <div class="col-md-4">
                                    @*@Html.DateTimePickerFor(model => model.ProbationFrom,null,DateTime.Now.ToString("dd/MM/yyyy"))*@
                                     @Html.DateTimePickerFor(model => model.ProbationFrom)
                                    @Html.ValidationMessageFor(model => model.ProbationFrom)
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.ProbationTo)
                                </div>
                                <div class="col-md-4">
                                   @* @Html.DateTimePickerFor(model => model.ProbationTo,null,DateTime.Now.AddMonths(2).ToString("dd/MM/yyyy"))*@
                                    @Html.DateTimePickerFor(model => model.ProbationTo)
                                    @Html.ValidationMessageFor(model => model.ProbationTo)
                                </div>
                            </div>

                            <div class="row">                               
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.MethodPIT)
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownList("MethodPIT", null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.MethodPIT)
                                </div>  
                                         
                                <div id="divPercentPIT">
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.PercentPIT)
                                    </div>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.PercentPIT, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.PercentPIT)
                                    </div>
                                </div>                                         
                            </div>                                

                            <div class="row">
                                    <div class="col-md-2">
                                    @Html.LabelFor(model => model.FileIds)
                                </div>
                                <div class="col-md-4">
                                    <input id="btnUpload_Contract" type="button" class="btn-green" value="@Html.Raw(Eagle.Resource.LanguageResource.FileBrowser)" />
                                        <input type="hidden" id="FileIds" name="FileIds" value="@Model.FileIds"/>
                                </div>    
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.ProbationSalary)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.ProbationSalaryEdit, new { @class = "form-control" })
                                </div>

                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.InsuranceSalary)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.InsuranceSalaryEdit, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Note)
                                </div>
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.Note, new { rows= 2, columns= 40, maxlength=150, @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        	            
        <!-- ACTION -->
        <div class="row">
            <div class="footbar">
                 @Html.HiddenFor(model => model.EmpID)
                <input type="button" id="btnAddContract" value="@Html.Raw(Eagle.Resource.LanguageResource.btnSave)" class="btn btn-info addItem" />
                <input type="button" id="btnReset" value="@Html.Raw(Eagle.Resource.LanguageResource.btnReset)" class="btn" />
            </div>
        </div>
        <!--End.ACTION-->
    </div>
}
<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" class="modal hide fade modalUpload" id="modalUpload_Contract" style="background: #eee;">
    <div id="divUpload_Contract"></div>
</div>
@Html.Action("jqueryval", "Common", null)