@model Eagle.Model.TER.TerminationParameterViewModel
@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "myform", name = "myform", autocomplete = "off", @class = "form-horizontal" }))
{
    @Html.Hidden("AccountId")
    @Html.Hidden("Mode")    
     @Html.HiddenFor(model => model.ID, new { @id = "ID" })
    <div id="alertMessageBox">
        @if (ViewBag.DisplayErrorMessage == true)
        {
            <div class="@ViewBag.CssClass">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <strong>@ViewBag.SortMessage!</strong>
                <div class="padding-left">
                    @Html.Raw(Server.HtmlDecode(ViewBag.Message))
                </div>
            </div>
        }
    </div>
    <div class="box">
        <div class="row">
            <div id="right_accordion" class="accordion-group">
                <div class="accordion-heading toolbar">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                        <span class="pull-right"><i class="glyphicon glyphicon-chevron-up icon-white"></i></span>
                        <span class="heading-tite">@Html.Raw(Eagle.Resource.LanguageResource.FormArea)</span>
                    </a>
                </div>
                <div id="form_accordion" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <div class="accordion-content">
                            <div class="row">
                                <div class="col-md-5">
                                    @Html.RequiredLabelFor(model => model.IsPaidForAnnualLeave, new { @class = "left_text" })
                                </div>
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.IsPaidForAnnualLeave, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IsPaidForAnnualLeave)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-5">
                                    @Html.RequiredLabelFor(model => model.IsPaidForMandatoryTrainingFee, new { @class = "left_text" })
                                </div>
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.IsPaidForMandatoryTrainingFee, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IsPaidForMandatoryTrainingFee)
                                </div>
                            </div>

                            <div class="row ">
                                <div class="col-md-5">
                                    @Html.RequiredLabelFor(model => model.IsManipulatedLeaveDayRemains, new { @class = "left_text" })
                                </div>
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.IsManipulatedLeaveDayRemains, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IsManipulatedLeaveDayRemains)
                                </div>                              
                            </div>

                            <div class="row">                           
                                <div class="col-md-5">
                                    @Html.RequiredLabelFor(model => model.IsManipulatedForPaidLeave, new { @class = "left_text" })
                                </div>
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.IsManipulatedForPaidLeave, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IsManipulatedForPaidLeave)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-5">
                                    @Html.RequiredLabelFor(model => model.IsDeletedAfterTerminationSettlement, new { @class = "left_text" })
                                </div>
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.IsDeletedAfterTerminationSettlement, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IsDeletedAfterTerminationSettlement)
                                </div>
                            </div>

                            <div class="row">
                               
                                <div class="col-md-5">
                                    @Html.RequiredLabelFor(model => model.IsAutomatedDecisionNo, new { @class = "left_text" })
                                </div>
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.IsAutomatedDecisionNo, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IsAutomatedDecisionNo)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-5">
                                    @Html.RequiredLabelFor(model => model.AutoNumberLenght, new { @class = "left_text" })
                                </div>
                                <div class="col-md-7">
                                    @Html.TextBoxFor(model => model.AutoNumberLenght, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.AutoNumberLenght)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-5">
                                    @Html.RequiredLabelFor(model => model.Prefix, new { @class = "left_text" })
                                </div>
                                <div class="col-md-7">
                                    @Html.TextBoxFor(model => model.Prefix, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Prefix)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-5">
                                    @Html.RequiredLabelFor(model => model.Suffix, new { @class = "left_text" })
                                </div>
                                <div class="col-md-7">
                                    @Html.TextBoxFor(model => model.Suffix, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Suffix)
                                </div>
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="footbar">
                                    <input type="button" id="btnAdd" value="@Eagle.Resource.LanguageResource.btnSave" class="btn btn-info add" />
                                    <input type="button" id="btnEdit" value="@Html.Raw(Eagle.Resource.LanguageResource.btnSave)" class="btn btn-info edit" />
                                    <input type="button" id="btnReset" value="@Html.Raw(Eagle.Resource.LanguageResource.btnReset)" class="btn btn-default reset" />
                                </div>
                            </div>
                            <!--End.row-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
