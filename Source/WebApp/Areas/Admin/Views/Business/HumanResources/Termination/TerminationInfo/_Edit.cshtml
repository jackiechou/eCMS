@model Eagle.Model.TER.TerminationViewModel
@Html.HiddenFor(model => model.TerminationID, new { @class = "KeyId" })
@*@Html.HiddenFor(model => model.EmpID)*@
@Html.Hidden("mode",0)

<div id="alertMessageBox">
    @if (ViewBag.DisplayErrorMessage == true)
    {
        <div class="@ViewBag.CssClass">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>@ViewBag.SortMessage !</strong>
            <div class="padding-left">
                @Html.Raw(Server.HtmlDecode(ViewBag.Message))
            </div>
        </div>
    }
</div>
<div class="box">
    <div class="row">
        <div id="right_accordion" class="accordion-group">
            <div class="accordion-heading toolbar">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                    <span class="pull-right"><i class="icon-chevron-up icon-white"></i></span>
                    <span class="heading-tite">@Eagle.Resource.LanguageResource.FormArea</span>
                </a>
            </div>
            <div id="form_accordion" class="accordion-body collapse in">
                <div class="accordion-inner">
                    <div class="accordion-content">
                        <div class="row">
                            <ul class="nav nav-tabs" id="myTab">
                                <li id="tab-1" class="active"><a href="#pane-1" data-toggle="tab">@Eagle.Resource.LanguageResource.GeneralInfo</a></li>
                                <li id="tab-2"><a href="#pane-2" data-toggle="tab">@Eagle.Resource.LanguageResource.Upload</a></li>
                            </ul>

                            <div id="myTabContent" class="tab-content responsive">
                                @*---------------------------------------------General--------------------------------------------*@
                                <div class="tab-pane  fade in active" id="pane-1">
                                    <div class="row">
                                        <div class="col-md-2">
                                            @Html.RequiredLabelFor(model => model.LSTerminationReasonID)
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DropDownListFor(model => model.LSTerminationReasonID, null, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.LSTerminationReasonID)
                                        </div>

                                        <div class="col-md-2">
                                            @Html.RequiredLabelFor(model => model.LSTerminationTypeID)
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DropDownListFor(model => model.LSTerminationTypeID, null, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.LSTerminationTypeID)
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-2">
                                            @Html.RequiredLabelFor(model => model.InformedDate)
                                        </div>
                                        <div class="col-md-4">
                                            @* @Html.DateTimePickerFor(model => model.InformedDate,  "dd/MM/yyyy", System.DateTime.Now.AddDays(-30).ToString("dd/MM/yyyy"))*@
                                            @Html.DateTimePickerFor(model => model.InformedDate)
                                            @Html.ValidationMessageFor(model => model.InformedDate)
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-2">
                                            @Html.RequiredLabelFor(model => model.LastWorkingDate)
                                        </div>
                                        <div class="col-md-4">
                                            @*@Html.DateTimePickerFor(model => model.LastWorkingDate,  "dd/MM/yyyy", System.DateTime.Now.ToString("dd/MM/yyyy"))*@
                                            @Html.DateTimePickerFor(model => model.LastWorkingDate)
                                            @Html.ValidationMessageFor(model => model.LastWorkingDate)
                                        </div>
                                        <div class="col-md-2">
                                            @Html.RequiredLabelFor(model => model.EffectiveDate)
                                        </div>
                                        <div class="col-md-4">
                                            @*@Html.DateTimePickerFor(model => model.EffectiveDate,  "dd/MM/yyyy", System.DateTime.Now.AddDays(1).ToString("dd/MM/yyyy"))*@
                                            @Html.DateTimePickerFor(model => model.EffectiveDate)
                                            @Html.ValidationMessageFor(model => model.EffectiveDate)
                                        </div>
                                    </div>


                                    <div class="row">
                                        <div class="col-md-2">
                                            @Html.LabelFor(model => model.SignDate)
                                        </div>
                                        <div class="col-md-4">
                                            @*@Html.DateTimePickerFor(model => model.SignDate, "dd/MM/yyyy", System.DateTime.Now.ToString("dd/MM/yyyy"))*@
                                            @Html.DateTimePickerFor(model => model.SignDate)
                                        </div>
                                        <div class="col-md-2">
                                            @Html.Label(Eagle.Resource.LanguageResource.ReturnedDate, new { title = @Html.Raw(Eagle.Resource.LanguageResource.ReturnDateForInsuranceCard) })
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DateTimePickerFor(model => model.ReturnDateForInsuranceCard, null, null, new { title = @Html.Raw(Eagle.Resource.LanguageResource.ReturnDateForInsuranceCard) })
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-2">
                                            @Html.Label(Eagle.Resource.LanguageResource.UnPaidMonths, new { title = @Html.Raw(Eagle.Resource.LanguageResource.MonthsOfUnPaidInsuranceCard) })
                                        </div>
                                        <div class="col-md-4">
                                            @* @Html.EditorFor(model => model.MonthsOfUnPaidInsuranceCard,null, new { @class = "form-control", min = "0", max = "12", title = @Html.Raw(Eagle.Resource.LanguageResource.MonthsOfUnPaidInsuranceCard) })*@
                                            @Html.TextBoxFor(model => model.MonthsOfUnPaidInsuranceCard, null, new { type = "number", min = "0", max = "12", @class = "form-control", title = @Html.Raw(Eagle.Resource.LanguageResource.MonthsOfUnPaidInsuranceCard) })
                                        </div>
                                        <div class="col-md-2">
                                            @Html.LabelFor(model => model.DecisionNo)
                                        </div>
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(model => model.DecisionNo)
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-2">
                                            @Html.Label(Eagle.Resource.LanguageResource.TerminationPayment, new { title = @Html.Raw(Eagle.Resource.LanguageResource.IsTerminationPaid) })
                                        </div>
                                        <div class="col-md-4">
                                            @Html.CheckBox("IsTerminationPaid", Model.IsTerminationPaid == true, new { @style = "float:left;margin:5px;" })
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-2">
                                            @Html.LabelFor(model => model.Description)
                                        </div>
                                        <div class="col-md-10">
                                            @Html.TextAreaFor(model => model.Description, new { rows = 2, columns = 40, @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                @*---------------------------------------------UPLOAD------------------------------------*@
                                <div class="tab-pane fade" id="pane-2">
                                    <div class="row">
                                        @Html.Action("PLUpload", "FileManager", new { @FolderKey = "UPLOAD_DOCUMENT_DIR", @FileIds = "" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="footbar">
                                <input type="button" id="btnReset" value="@Eagle.Resource.LanguageResource.btnReset" class="btn" />
                                <input type="button" id="btnAdd" value="@Eagle.Resource.LanguageResource.btnSave" class="btn btn-info add" />
                                <input type="button" id="btnEdit" value="@Eagle.Resource.LanguageResource.btnSave" class="btn btn-info edit" style="display:none" />
                            </div>
                        </div>
                        <!--End.row-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
