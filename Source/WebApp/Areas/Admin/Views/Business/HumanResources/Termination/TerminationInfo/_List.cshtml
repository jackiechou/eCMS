@model IEnumerable<Eagle.Model.TER.TerminationViewModel>
<div class="table datatable">
    <table id="dataTable" class="use-dataTable table table-bordered table-condensed table-hover table-striped tablesorter sortableTable">
        <thead>
            <tr>
                <th class="text_center">@Eagle.Resource.LanguageResource.No</th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LSTerminationReasonName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LSTerminationTypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InformedDate)
                </th>
                <th class="table-actions text_center no-sort">@Eagle.Resource.LanguageResource.Actions</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LSTerminationReasonName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LSTerminationTypeName)
                    </td>
                    <td class="center">
                        @Html.DisplayFor(modelItem => item.InformedDate)
                    </td>
                    <td class="table-actions text_center center no-sort">
                        <a data-id="@item.TerminationID" title="Edit" class="ico editItem ">&nbsp;&nbsp;&nbsp;</a>
                        <a data-id="@item.TerminationID" title="Delete" class="ico deleteItem ">&nbsp;&nbsp;&nbsp;</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>