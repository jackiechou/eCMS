@model RecruitmentPlanViewModel

<form id="frmAdd" class="form-horizontal">
    <div id="alertMessageBox">
        @if (ViewBag.DisplayErrorMessage == true)
        {
            <div class="@ViewBag.CssClass">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <strong>@ViewBag.SortMessage !</strong>
                <div class="padding-left">
                    @Html.Raw(Server.HtmlDecode(ViewBag.Message))
                </div>
            </div>
        }
    </div>
    <div class="box">
        <div class="row">
            <div id="right_accordion" class="accordion-group">
                <div class="accordion-heading toolbar">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                        <span class="pull-right"><i class="glyphicon glyphicon-chevron-up icon-white"></i></span>
                        <span class="heading-tite">@Eagle.Resource.LanguageResource.SearchArea</span>
                    </a>
                </div>
                <div id="form_accordion" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <div class="accordion-content">
                             <div class="row">
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.YearAlowNull)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.YearAlowNull, new { @class = "col-md-3 text-center" })
                                </div>
                                 <div class="col-md-2">
                                    @Html.LabelFor(model => model.StatusPlan)
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownList("StatusPlan")
                                </div>

                            </div>
                            <!--start row-->
                            <div class="row">
                                
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.LSCompanyID)
                                </div>
                                <div class="col-md-4">
                                    <select id="LSCompanyID" name="LSCompanyID" class="easyui-combotree col-md-2"></select>
                                    @Html.ValidationMessageFor(model => model.LSCompanyID)    
                                    @{ 
                                        string LSCompanyID = Model.LSCompanyID == 0 ? "" : Model.LSCompanyID.ToString();
                                        }                                                                
                                    <script>
                                        $(document).ready(function () {
                                            LoadComboTreeWithActionWithValue('LSCompanyID', 'GetAllWithPlease', '@LSCompanyID');
                                        });
                                    </script>
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.LSPositionID)
                                </div>
                                <div class="col-md-4">  
                                    @Html.TextBox("SelectLSPositionIDAlowNull", null, new { @class = "form-control" })
                                    @Html.HiddenFor(model => model.LSPositionIDAlowNull)
                                    @Html.HiddenFor(model => model.LSPositionName)
                                </div>
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="footbar">
                                @*    <input type="button" id="btnDelete" value="@Eagle.Resource.LanguageResource.Delete" class="btn" />
                                    <input type="button" id="btnReset" value="@Eagle.Resource.LanguageResource.btnReset" class="btn" />*@
                                    <input type="button" id="btnAdd" value="@Eagle.Resource.LanguageResource.Search" class="btn btn-info AddModel" />
                                </div>
                            </div>
                            <!--End.row-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


<script>
    PopulateDropDownListAutoComplete("SelectLSPositionIDAlowNull", "LSPositionIDAlowNull", "LSPositionName", '@Html.Raw(Eagle.Resource.LanguageResource.PleaseInputPositionName)', areas + '/LS_tblPosition/DropdownList');
</script>


