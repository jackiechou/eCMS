@model List<PreviousRoundViewModel>

@if (Model != null)
{
    int i = 0;
    foreach (var item in Model)
    {
        i++;
        string href = "form_accordion" + i.ToString();
        <div class="accordion-heading toolbar">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#@href">
                <span class="pull-right"><i class="icon-chevron-up icon-white"></i></span>
                <span class="heading-tite">
                    <label class="reset-label">@Eagle.Resource.LanguageResource.Tournament @item.SEQ</label></span>
            </a>
        </div>
        <div id="@href" class="accordion-body collapse">
            <div class="accordion-inner">
                <div class="accordion-content">

                    <div class="row">
                        <div class="col-md-2">
                            <label>@Eagle.Resource.LanguageResource.Interviewer</label>
                        </div>
                        <div class="col-md-4">
                            <label class="reset-label">@item.Interviewer</label>
                        </div>
                        <div class="col-md-2">
                            <label>@Eagle.Resource.LanguageResource.Result</label>
                        </div>
                        <div class="col-md-4">
                            <label class="reset-label">@item.ResultName</label>
                        </div>
                    </div>
                    <hr />
                    @if (item.InterviewCriter != null)
                    {
                        <ul>
                            @foreach (var ic in item.InterviewCriter)
                            {
                                <li>
                                    @ic.Name - (@ic.Rank/10)
                                        @if (!string.IsNullOrEmpty(ic.Note))
                                        {
                                            @Html.Raw(" - " + ic.Note);
                                        }
                                </li>
                            }
                        </ul> 
                    }
                </div>
            </div>
        </div>
    }
}