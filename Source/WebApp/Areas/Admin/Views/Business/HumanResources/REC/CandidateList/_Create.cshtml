@model CandidateSearchViewModel

<form id="frmAdd" class="form-horizontal">
    <div id="alertMessageBox">
        @if (ViewBag.DisplayErrorMessage == true)
        {
            <div class="@ViewBag.CssClass">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <strong>@ViewBag.SortMessage !</strong>
                <div class="padding-left">
                    @Html.Raw(Server.HtmlDecode(ViewBag.Message))
                </div>
            </div>
        }
    </div>
    <div class="box">
        <div class="row">
            <div id="right_accordion" class="accordion-group">
                <div class="accordion-heading toolbar">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                        <span class="pull-right"><i class="icon-chevron-up icon-white"></i></span>
                        <span class="heading-tite">@Eagle.Resource.LanguageResource.SearchArea</span>
                    </a>
                </div>
                <div id="form_accordion" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <div class="accordion-content">

                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.CandidateCode)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.CandidateCode, new { @class = "form-control" })
                                </div>

                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Result)
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownList("Result", null ,"--"+ Eagle.Resource.LanguageResource.Select +"--" , new { @class = "form-control" })
                                    
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.FirstName)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                                </div>

                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.LastName)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Gender)
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownList("Gender", null ,"--"+ Eagle.Resource.LanguageResource.Select +"--" , new { @class = "form-control" })
                                </div>

                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.LSLocationID)
                                </div>
                                <div class="col-md-4">
                                       @Html.TextBox("SelectLSLocationID", null, new { @class = "span12 autocomplete-select2" })
                                        @Html.HiddenFor(model => model.LSLocationID)
                                        @Html.HiddenFor(model => model.LSLocationName)
                                </div>
                            </div>


                            <div class="group-control">
                                <div>
                                    <h6>@Eagle.Resource.LanguageResource.ExpectationPosition</h6>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.LSPositionID)
                                    </div>
                                    <div class="col-md-4">
                                        @Html.TextBox("SelectLSPositionID", null, new { @class = "form-control" })
                                        @Html.HiddenFor(model => model.LSPositionID)
                                        @Html.HiddenFor(model => model.LSPositionName)
                                    </div>

                                </div>

                                <div class="row">

                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.LSPositionID_Probation1)
                                    </div>
                                    <div class="col-md-4">
                                        @Html.TextBox("SelectLSPositionID_Probation1", null, new { @class = "form-control" })
                                        @Html.HiddenFor(model => model.LSPositionID_Probation1)
                                        @Html.HiddenFor(model => model.LSPositionID_Probation1Name)
                                    </div>
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.LSPositionID_Probation2)
                                    </div>
                                    <div class="col-md-4">
                                        @Html.TextBox("SelectLSPositionID_Probation2", null, new { @class = "form-control" })
                                        @Html.HiddenFor(model => model.LSPositionID_Probation2)
                                        @Html.HiddenFor(model => model.LSPositionID_Probation2Name)
                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="footbar">
                                    <input type="button" id="btnDelete" value="@Eagle.Resource.LanguageResource.Delete" class="btn" />
                                    <input type="button" id="btnReset" value="@Eagle.Resource.LanguageResource.btnReset" class="btn" />
                                    <input type="button" id="btnAdd" value="@Eagle.Resource.LanguageResource.Search" class="btn btn-info AddModel" />
                                </div>
                            </div>
                            <!--End.row-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@Html.Action("jqueryval", "Common", null)

<script>
    //InvokeDateTimePicker();
    var strInputPosition = '@Html.Raw(Eagle.Resource.LanguageResource.PleaseInputWorkplace)';

    PopulateDropDownListAutoComplete("SelectLSLocationID", "LSLocationID", "SelectLSLocationName", strInputPosition, areas + '/LS_tblLocation/DropdownList');

    PopulateDropDownListAutoComplete("SelectLSPositionID", "LSPositionID", "LSPositionName", strInputPosition, areas + '/LS_tblPosition/DropdownList');
    PopulateDropDownListAutoComplete("SelectLSPositionID_Probation1", "LSPositionID_Probation1", "LSPositionID_Probation1Name", strInputPosition, areas + '/LS_tblPosition/DropdownList');
    PopulateDropDownListAutoComplete("SelectLSPositionID_Probation2", "LSPositionID_Probation2", "LSPositionID_Probation2Name", strInputPosition, areas + '/LS_tblPosition/DropdownList');

    
</script>


