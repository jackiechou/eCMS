@model CandidateViewModel
@if (Model != null)
{
        <div class="accordion-heading toolbar">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#CandidateInfomation">
                <span class="pull-right"><i class="glyphicon glyphicon-chevron-up icon-white"></i></span>
                <span class="heading-tite">
                    <label class="reset-label">@Eagle.Resource.LanguageResource.CandidateInformation</label></span>
            </a>
        </div>
        <div id="CandidateInfomation" class="accordion-body collapse">
            <div class="accordion-inner">
                <div class="accordion-content">
                    <div class="row">
                        <div class="col-md-6">
                            <div>
                                <div class="col-md-4">
                                    @Html.LabelFor(model => model.CandidateCode)
                                </div>
                                <div class="col-md-6 offset2">
                                    <label class="reset-label">@Html.DisplayFor(model => model.CandidateCode)</label>
                                </div>
                            </div>
                            <div>
                                <div class="col-md-4">
                                    @Html.LabelFor(model => model.FullName)
                                </div>
                                <div class="col-md-6 offset2">
                                    <label class="reset-label">@Html.DisplayFor(model => model.FullName)</label>
                                </div>
                            </div>
                            <div>
                                <div class="col-md-4">
                                    @Html.LabelFor(model => model.GenderName)
                                </div>
                                <div class="col-md-6 offset2">
                                    <label class="reset-label">@Html.DisplayFor(model => model.GenderName)</label>
                                </div>
                            </div>
                            <div>
                                <div class="col-md-4">
                                    @Html.LabelFor(model => model.DOB)
                                </div>
                                <div class="col-md-6 offset2">
                                    <label class="reset-label">@Html.DisplayFor(model => model.DOB)</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-2">@Html.LabelFor(model => model.FileId)</div>
                        <div class="col-md-4">@Html.ImageByFileId("Photo", Model.FileId, Model.LastName + " " + Model.FirstName, new { width = "80", height = "80", @class = "thumb" })</div>
                    </div>
                    <div class="group-control">
                        <div>
                            <h6>@Eagle.Resource.LanguageResource.Expectation</h6>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-2">
                                <label>@Eagle.Resource.LanguageResource.Position</label>
                            </div>
                            <div class="col-md-3 offset1">
                                <label class="reset-label">
                                    @ViewBag.ExpectationPosition
                                </label>
                            </div>
                            <div class="col-md-2">
                                <label>@Eagle.Resource.LanguageResource.Salary</label>
                            </div>
                            <div class="col-md-3 offset1">
                                <label class="reset-label">
                                    @ViewBag.ExpectationSalary
                                </label>
                            </div>
                        </div>
                    </div> 
                </div>
                <div class="group-control">
                    <div>
                        <h6>@Eagle.Resource.LanguageResource.WorkingBackground</h6>
                    </div>
                    <hr />
                    @Html.Action("_WorkingBackGround")
                </div>
                <div class="group-control">
                    <div>
                        <h6>@Eagle.Resource.LanguageResource.Qualification</h6>
                    </div>
                    <hr />
                    @Html.Action("_Qualification")
                </div>
                <div class="group-control">
                    <div>
                        <h6>@Eagle.Resource.LanguageResource.AttachFile</h6>
                    </div>
                    <hr />
                    @Html.Action("_AttachFile")
                </div>
                <div class="group-control">
                    <div>
                        <h6>@Eagle.Resource.LanguageResource.Other</h6>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-2">
                            @Html.LabelFor(model => model.Skill)
                        </div>
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Skill, new { @class="col-md-12" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
}