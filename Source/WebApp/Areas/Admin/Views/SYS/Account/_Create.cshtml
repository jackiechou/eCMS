@model AccountCreateModel
@{
    
    int LanguageId = 10001;
    if (base.Session["LanguageId"] != null)
    {
        LanguageId = Convert.ToInt32(base.Session["LanguageId"]);
    }
}
<form id="frmAdd" class="form-horizontal" autocomplete="off" autocapitalize="off" autocorrect="off">
    @Html.HiddenFor(model => model.InitialUserName)
    @Html.HiddenFor(model => model.EmpID, new { @id = "strEmpID" })
    @Html.HiddenFor(model => model.UserID)
    <div id="alertMessageBox">
        @if (ViewBag.DisplayErrorMessage == true)
        {
            <div class="@ViewBag.CssClass">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <strong>@ViewBag.SortMessage !</strong>
                <div class="padding-left">
                    @Html.Raw(Server.HtmlDecode(ViewBag.Message))
                </div>
            </div>
        }
    </div>
    <div class="box">
        <div class="row">
            <div id="right_accordion" class="accordion-group">
                <div class="accordion-heading toolbar">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                        <span class="pull-right"><i class="icon-chevron-up icon-white"></i></span>
                        <span class="heading-tite">@Eagle.Resource.LanguageResource.InputArea</span>
                    </a>
                </div>
                <div id="form_accordion" class="accordion-body collapse in">
                    <div>
                        <div class="accordion-inner">
                            <div class="accordion-content">

                                <!--start row-->
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.RequiredLabelFor(model => model.strEmpName)
                                    </div>
                                    <div class="col-md-4">
                                            @if (Model != null && Model.EmpID > 0)
                                            {
                                                @Html.TextBoxFor(model => model.strEmpName, new { @placeholder = @Eagle.Resource.LanguageResource.EmpName, @class = "form-control",@disabled="disabled" })
                                                @Html.HiddenFor(model => model.strEmpName)
                                            }
                                            else
                                            {
                                                <div class="input-append" id="InputstrEmpName">
                                                    <div class="input-append">
                                                        @Html.TextBoxFor(model => model.strEmpName, new { @placeholder = @Eagle.Resource.LanguageResource.EmpName, @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.strEmpName)
                                                        <button class="btn btnPopupEmp" type="button">...</button>
                                                    </div> 
                                                </div>                                           
                                            }
                                    </div>
                                    <div class="col-md-2">
                                        @Html.RequiredLabelFor(model => model.UserName)
                                    </div>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.UserName, new { @autocomplete = "off", @autocapitalize = "off", @autocorrect = "off", @class = "input-large" })                                        
                                        @Html.ValidationMessageFor(model => model.UserName)
                                    </div>

                                </div>
                                <!--/row-->
                                <!--start row-->
                                @if (ViewBag.PasswordVis != false)
                                {
                                    <div class="row">
                                        <div class="col-md-2">
                                            @Html.RequiredLabelFor(model => model.Password)
                                        </div>
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(model => model.Password, new { @autocomplete = "off", @autocapitalize = "off", @autocorrect = "off", @type = "password", @class = "input-large", @placeholder = @Eagle.Resource.LanguageResource.Password })
                                            @Html.ValidationMessageFor(model => model.Password)
                                        </div>
                                        <div class="col-md-2">
                                            @Html.RequiredLabelFor(model => model.RetypePassword)
                                        </div>
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(model => model.RetypePassword, new { @type = "password", @class = "input-large", @placeholder = @Eagle.Resource.LanguageResource.RetypePassword })
                                            @Html.ValidationMessageFor(model => model.RetypePassword)
                                        </div>

                                    </div>
                                }
                                else
                                {
                                    @Html.Hidden("Password", "aaa")
                                    @Html.Hidden("RetypePassword", "aaa")
                                }
                                <!--/row-->
                                <!--start row-->
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.RequiredLabelFor(model => model.FromDate)
                                    </div>
                                    <div class="col-md-4">
                                        @Html.DatepickerFor(model => model.FromDate, null, null, LanguageId)
                                        @Html.ValidationMessageFor(model => model.FromDatetmp)
                                    </div>
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.ToDate)
                                    </div>
                                    <div class="col-md-4">
                                        @Html.DatepickerFor(model => model.ToDate, null, null, LanguageId)
                                    </div>

                                </div>
                                <!--/row-->

                                <!--start row-->
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.LockDate)
                                    </div>
                                    <div class="col-md-4">
                                        @Html.DatepickerFor(model => model.LockDate, null, null, LanguageId)
                                        @Html.ValidationMessageFor(model => model.LockDate)
                                    </div>
                                    <div class="col-md-6">

                                        <div class="row">
                                            <div class="col-md-3">
                                                @Html.LabelFor(model => model.FLock)
                                            </div>
                                            <div class="col-md-1">
                                                @Html.CheckBox("FLock")
                                            </div>
                                            <div class="col-md-3">
                                                @Html.LabelFor(model => model.IsLDAP)
                                            </div>
                                            <div class="col-md-1">
                                                @Html.CheckBox("IsLDAP")
                                            </div>
                                            <div class="col-md-3">
                                                @Html.LabelFor(model => model.FAdm)
                                            </div>
                                            <div class="col-md-1">
                                                @Html.CheckBox("FAdm")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="footbar">
                                <input type="button" id="btnReset" value="@Eagle.Resource.LanguageResource.btnReset" class="btn" />
                                <input type="button" id="btnAdd" value="@Eagle.Resource.LanguageResource.btnSave" class="btn btn-info AddModel" />
                            </div>
                        </div>
                        <!--End.row-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@Html.Action("jqueryval", "Common", null)

<script>
    InvokeDateTimePicker();
</script>