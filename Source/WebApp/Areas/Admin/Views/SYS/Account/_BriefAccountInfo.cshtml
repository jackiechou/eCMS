@model AccountViewModel
<div id="briefInfo">
    <div class="box2 accordion-group">
        <div class="accordion-heading toolbar">
            <a href="#top_accordion" data-parent="#accordion2" data-toggle="collapse" class="accordion-toggle">
                <span class="pull-right"><i class="glyphicon glyphicon-chevron-up icon-white"></i></span>
                <span class="heading-tite">@Eagle.Resource.LanguageResource.CurrentInfo</span>
            </a>
        </div>
        <div class="accordion-body collapse in" id="top_accordion">
            <div class="accordion-inner">
                <div class="accordion-content">
                    <!--start row-->
                    <div class="row">
                        <div class="col-md-2">
                            <label>@Html.LabelFor(model => model.UserName)</label>
                        </div>
                        <div class="col-md-4 line_bottom">
                            @Html.Label("UserName", Model.UserName, new { @class = "reset-label" })
                        </div>
                    </div>
                    <!--end row-->                  
                </div>
            </div>
        </div>
    </div>
</div>

