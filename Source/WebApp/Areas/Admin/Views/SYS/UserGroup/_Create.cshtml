                    <div class="user-style">
                         <h5>@Eagle.Resource.LanguageResource.UserList </h5>
                        <div class="control-group">
                           @Html.ListBox("lstBox", ViewData["lstBox"] as MultiSelectList, new { @id = "lstBox" })
                        </div>
                    </div>
                </div>

                <div class="col-md-2">                    
