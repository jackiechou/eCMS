@model Eagle.Model.SYS.Content.ContentItemViewModel

<div id="MainBody">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "myform", name = "myform", autocomplete = "off", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
         @Html.HiddenFor(model => model.ContentItemId)
        
        <div class="form-horizontal">
            <div class="form-lead">@Html.Raw(@Eagle.Resource.LanguageResource.RequiredFill)</div>  
            <div class="form-group">               
                <div class="col-sm-3">
                    @Html.RequiredLabelFor(model => model.ContentTypeId)
                </div>
                <div class="col-sm-9">
                    @Html.DropDownListFor(model => model.ContentTypeId, null, new { @class = "col-md-12 form-control" })
                    @Html.ValidationMessageFor(model => model.ContentTypeId)
                </div>               
            </div>
            <div class="form-group">            
                <div class="col-sm-3">
                    @Html.RequiredLabelFor(model => model.ContentKey)
                </div>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.ContentKey, null, new { @class = "col-md-12 form-control" })
                    @Html.ValidationMessageFor(model => model.ContentKey)
                </div>               
            </div>
            <div class="form-group">               
                <div class="col-sm-3">
                    @Html.LabelFor(model => model.Content)
                </div>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Content, null, new { @class = "col-md-12 tags form-control" })
                    @Html.ValidationMessageFor(model => model.Content)
                </div>               
            </div>
        </div>
    }
</div>


