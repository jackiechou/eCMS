@model Eagle.Model.FunctionListViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "myform", name = "myform", autocomplete = "off", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
     @Html.HiddenFor(model => model.FunctionID)
    
    <div id="alertMessageBox">
        @if (ViewBag.DisplayErrorMessage == true)
        {
            <div class="@ViewBag.CssClass    ">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <strong>@ViewBag.SortMessage !</strong>
                <div class="padding-left">
                    @Html.Raw(Server.HtmlDecode(ViewBag.Message))
                </div>
            </div>
        }
    </div>
    <div class="box">
        <div class="row">
            <div id="right_accordion" class="accordion-group">
                <div class="accordion-heading toolbar">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                        <span class="pull-right"><i class="glyphicon glyphicon-chevron-up icon-white"></i></span>
                        <span class="heading-tite">@Html.Raw(Eagle.Resource.LanguageResource.FormArea)</span>
                    </a>
                </div>
                <div id="form_accordion" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <div class="accordion-content">
                            <!--start row-->
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.ModuleID)
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownListFor(model => model.ModuleID, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ModuleID)
                                </div>
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.Parent)
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownListFor(model => model.Parent, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Parent)
                                </div>
                            </div>
                            <!--end row-->

                            <!--start row-->
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.FunctionName)
                                </div>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.FunctionName, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.FunctionName)
                                </div>
                            </div>
                            <!--end row-->

                            <!--start row-->
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.TitleV)
                                </div>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.TitleV, null, new { @class = "form-control" })
                                </div>
                            </div>
                            <!--end row-->

                            <!--start row-->
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.RequiredLabelFor(model => model.TitleE)
                                </div>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.TitleE, null, new { @class = "form-control" })
                                </div>
                            </div>
                            <!--end row-->
                           
                            <!--start row-->
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Display)
                                </div>
                                <div class="col-md-4">
                                   @Html.CheckBox("Display", false, new { @style = "float:left;margin:5px;" })
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Left_Horizontal)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.Left_Horizontal, null, new { @class = "form-control" })
                                </div>
                            </div>
                            <!--end row-->

                            <!--start row-->
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.cssClass)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.cssClass, null, new { @class = "form-control" })
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.LookId)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.LookId, null, new { @class = "form-control" })
                                </div>
                            </div>
                            <!--end row-->

                            <!--start row-->
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.AscxParent)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.AscxParent, null, new { @class = "form-control" })
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Tooltips)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.Tooltips, null, new { @class = "form-control" })
                                </div>
                            </div>
                            <!--end row-->

                            <!--start row-->
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.HaveSetup)
                                </div>
                                <div class="col-md-4">
                                    @Html.CheckBox("HaveSetup", Model.HaveSetup == true, new { @style = "float:left;margin:5px;" })
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.FunctionDefault)
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.FunctionDefault, new { @class = "form-control", min = "0", max = "100" })
                                </div>
                            </div>
                            <!--end row-->
                        </div>

                        <!--/row-->
                        <div class="row">
                            <div class="footbar">
                                <input type="button" id="btnAdd" value="@Eagle.Resource.LanguageResource.btnSave" class="btn btn-info add" />
                                <input type="button" id="btnReset" value="@Eagle.Resource.LanguageResource.btnReset" class="btn btn-default reset" />
                            </div>
                        </div>
                        <!--End.row-->
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}