@model List<GroupViewModel>

<div class="table">
    <table id="dataTable" class="use-dataTable table table-bordered table-condensed table-hover table-striped tablesorter sortableTable">
        <thead>
            <tr>
                <th class="text_center">@Eagle.Resource.LanguageResource.No</th>
                <th>
                    @Eagle.Resource.LanguageResource.GroupCode
                </th>
                <th>
                    @Eagle.Resource.LanguageResource.GroupName
                </th>
                <th class="no-sort">
                    @Eagle.Resource.LanguageResource.Note
                </th>
                <th class="no-sort text_center">
                    @Eagle.Resource.LanguageResource.Used
                </th>
                <th class="table-actions text_center no-sort">@Eagle.Resource.LanguageResource.Actions</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @item.GroupCode
                    </td>
                    <td>
                        @item.GroupName
                    </td>
                    <td>
                        @item.Note
                    </td>
                    <td class="text_center ">
                        @item.strUsed
                    </td>
                    <td class="table-actions text_center no-sort">
                        <a data-id="@item.GroupID"  title="Edit" class="ico editItem " >&nbsp;&nbsp;&nbsp;</a>
                        <a data-id="@item.GroupID"  title="Delete" class="ico deleteItem ">&nbsp;&nbsp;&nbsp;</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    InvokeDataTables();
</script>