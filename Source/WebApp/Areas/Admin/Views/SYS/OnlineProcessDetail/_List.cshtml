@model IEnumerable<OnlineProcessEmpViewModel>

<div class="table">
    <table id="dataTable" class="use-dataTable table table-bordered table-condensed table-hover table-striped tablesorter sortableTable">
        <thead>
            <tr>
                <th class="text_center">@Eagle.Resource.LanguageResource.No</th>
                <th>
                    @Html.DisplayNameFor(model => model.OnlineProcessName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.strEmpName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Approve)
                </th>
                <th class="table-actions center no-sort">@Eagle.Resource.LanguageResource.Actions</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OnlineProcessName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>                   
                    <td>
                        @Html.DisplayFor(modelItem => item.strEmpName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Approve)
                    </td>
                    <td class="table-actions center no-sort">
                        <a data-id="@item.OnlineProcessEmpID"  title="Edit" class="ico editItem " >&nbsp;&nbsp;&nbsp;</a>
                        <a data-id="@item.OnlineProcessEmpID"  title="Delete" class="ico deleteItem ">&nbsp;&nbsp;&nbsp;</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    InvokeDataTables();
</script>