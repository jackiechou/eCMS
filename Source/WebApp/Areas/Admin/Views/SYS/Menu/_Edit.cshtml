@{
    ViewBag.Title = Html.Raw(Eagle.Resource.LanguageResource.Menu + " : " + Eagle.Resource.LanguageResource.Edit);
    Layout = Eagle.Repository.UI.Layout.LayoutType.FormLayout;
}
@model Eagle.Model.SYS.Menu.MenuViewModel

@section TopActionButtons {
    <input type="button" class="btn  btn-default reset btnReset" data-dismiss="modal" aria-hidden="true" value="@Eagle.Resource.LanguageResource.Reset" />
    <input type="button" class="btn btn-info addMenu" value="@Eagle.Resource.LanguageResource.Save" />
}
@section BottomActionButtons {
    <input type="button" class="btn btn-default reset btnReset" data-dismiss="modal" aria-hidden="true" value="@Eagle.Resource.LanguageResource.Reset" />
    <input type="button" class="btn btn-info addMenu" value="@Eagle.Resource.LanguageResource.Save" />
}

@section TopHeading {
    <h6>@Eagle.Resource.LanguageResource.CreateArea</h6>
}
<div class="add-new-module">
    <div class="sub-container">
        <div class="sub-header-container">
            <div class="sub-heading-title">
                <h6>@Eagle.Resource.LanguageResource.PageSelection</h6>
            </div>
        </div>
        <div class="sub-body-container">
            <!--start row-->
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.PageId)
                </div>
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.PageId, null, new { @class = "form-control", autocomplete = "off" })
                </div>
                <div class="col-md-3">
                    @Html.RequiredLabelFor(model => model.MenuTypeId)
                </div>
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.MenuTypeId, null, new { @class = "form-control", autocomplete = "off" })
                    @Html.ValidationMessageFor(model => model.MenuTypeId)
                </div>
            </div>
            <!--end row-->
            <!--start row-->
            <div class="form-group">
                <div class="col-md-3">
                    @Html.RequiredLabelFor(model => model.MenuName)
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.MenuName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MenuName)
                </div>
                <div class="col-md-3">
                    @Html.RequiredLabelFor(model => model.MenuTitle)
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.MenuTitle, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MenuTitle)
                </div>
            </div>
            <!--end row-->
            <!--start row-->
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Description)
                </div>
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.Description, new { rows = 2, columns = 40, maxlength = 150, @class = "form-control" })
                </div>

            </div>
            <!--end row-->
        </div>
    </div>
    <div class="clearboth"></div>
    <div class="sub-container">
        <div class="sub-header-container">
            <div class="sub-heading-title">
                <h6>@Eagle.Resource.LanguageResource.Appearance</h6>
            </div>
        </div>
        <div class="sub-body-container">
            <!--start row-->
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.IconFile)
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.IconFile, new { type = "file", @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Target)
                </div>
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.Target, null, new { @class = "form-control" })
                </div>
            </div>
            <!--end row-->
            <!--start row-->
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.IconClass)
                </div>
                <div class="col-md-3">
                    <button id="btnIconPicker" class="btn btn-default" data-rows="3" data-cols="6" role="iconpicker" data-arrow-class="btn-success"
                            data-iconset="glyphicon|ionicon|fontawesome|weathericon|mapicon|octicon|typicon|elusiveicon" data-icon="glyphicon-picture"></button>
                    <input type="hidden" id="IconClass" name="IconClass" />
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.CssClass)
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.CssClass, new { @class = "form-control" })
                </div>
            </div>
            <!--end row-->
            <!--start row-->
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Color)
                </div>
                <div class="col-md-3">
                    <input id="Color" class="color-picker form-control" value="#31859b" style="width:100px" />
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.MenuStatus)
                </div>
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.MenuStatus, null, new { @class = "form-control" })
                </div>
            </div>
            <!--end row-->
        </div>
    </div>
    <div class="clearboth"></div>
    @Html.Action("LoadMenuRolePermission", "Permission")
</div>


