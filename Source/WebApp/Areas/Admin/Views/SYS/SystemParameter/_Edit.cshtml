@model SystemParameterViewModel

<form id="frmAdd" class="form-horizontal" autocomplete="off" autocapitalize="off" autocorrect="off">
   @Html.HiddenFor(model => model.ParameterID)
     <div id="alertMessageBox">
            @if (ViewBag.DisplayErrorMessage == true)
            {
                <div class="@ViewBag.CssClass">
                    <a href="#" class="close" data-dismiss="alert">&times;</a>
                    <strong>@ViewBag.SortMessage !</strong>
                    <div class="padding-left">
                        @Html.Raw(Server.HtmlDecode(ViewBag.Message))
                    </div>
                </div>
            }
       </div>
   
    <div class="box">
        <div class="row">
            <div id="right_accordion" class="accordion-group">
                <div class="accordion-heading toolbar">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                        <span class="pull-right"><i class="icon-chevron-up icon-white"></i></span>
                        <span class="heading-tite">Input region</span>
                    </a>
                </div>
                <div id="form_accordion" class="accordion-body collapse in">                   
                       <div class="accordion-inner">
                            <div class="accordion-content">
                                 <h6>@Eagle.Resource.LanguageResource.GeneralInformation</h6>
                                <hr />
                                <!--start row-->
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.TypeOfSalary)
                                    </div>
                                    <div class="col-md-4">
                                        <label class="reset-label">@Html.RadioButton("TypeOfSalary",1,Model.TypeOfSalary == 1) @Eagle.Resource.LanguageResource.SystemParameter_TypeOfSalary_1</label>
                                        <label class="reset-label">@Html.RadioButton("TypeOfSalary",2,Model.TypeOfSalary == 2) @Eagle.Resource.LanguageResource.SystemParameter_TypeOfSalary_2</label>
                                        @Html.ValidationMessageFor(model => model.TypeOfSalary)
                                    </div>
                                     <div class="col-md-2">
                                        @Html.LabelFor(model => model.LeaveType)
                                    </div>
                                    <div class="col-md-4">
                                        <label class="reset-label">@Html.RadioButton("LeaveType",1,Model.LeaveType == 1) @Eagle.Resource.LanguageResource.SystemParameter_LeaveType_1</label>
                                        <label class="reset-label">@Html.RadioButton("LeaveType",2,Model.LeaveType == 2) @Eagle.Resource.LanguageResource.SystemParameter_LeaveType_2 </label>
                                        @Html.ValidationMessageFor(model => model.LeaveType)
                                    </div>
                                </div>
                                <!--end row-->
                                 <!--start row-->
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.OTLimit)
                                    </div>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.OTLimit, new { @autocomplete = "off", @placeholder = @Eagle.Resource.LanguageResource.OTLimit, @class = "span6" })
                                        @Html.ValidationMessageFor(model => model.OTLimit)
                                    </div>
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.StandardAnnualLeave)
                                    </div>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.StandardAnnualLeave, new { @placeholder = @Eagle.Resource.LanguageResource.StandardAnnualLeave, @class = "span5" })
                                        @Html.ValidationMessageFor(model => model.StandardAnnualLeave)
                                    </div>
                                </div>
                                <!--end row-->
                                
                                <!--start row-->
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.NightOTFrom)
                                    </div>
                                    <div class="col-md-4">
                                        @{ int LanguageId = (int)Session["LanguageId"];}
                                        @Html.TimepickerFor(model => model.NightOTFrom)
                                        @Html.ValidationMessageFor(model => model.NightOTFrom)
                                    </div>
                                     <div class="col-md-2">
                                        @Html.LabelFor(model => model.NightOTTo)
                                    </div>
                                    <div class="col-md-4">                                        
                                        @Html.TimepickerFor(model => model.NightOTTo)
                                        @Html.ValidationMessageFor(model => model.NightOTTo)
                                    </div>
                                </div>
                                <!--end row-->
                                 <!--start row-->
                                <div class="row">
                                    <div class="col-md-2">
                                        <label>
                                            @Eagle.Resource.LanguageResource.DateExpireLeaveForward
                                        </label>
                                    </div>
                                    <div class="col-md-4">
                                        @Html.DropDownList("Days")                                           
                                        /
                                        @Html.DropDownList("Months")                                       
                                    </div> 
                                    <div class="col-md-6" style="font-style:italic; font-size:small;">
                                        (@Eagle.Resource.LanguageResource.ForLeaveForward)
                                    </div>
                                </div>
                                <!--
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.StandardWorking)
                                    </div>
                                    <div class="span">
                                        <label class="reset-label">@Html.RadioButton("StandardWorking",1,Model.StandardWorking == 1) @Eagle.Resource.LanguageResource.SystemParameter_StandardWorking_1</label>
                                        <label class="reset-label">@Html.RadioButton("StandardWorking",2,Model.StandardWorking == 2) @Eagle.Resource.LanguageResource.SystemParameter_StandardWorking_2</label>
                                        @Html.ValidationMessageFor(model => model.StandardWorking)
                                    </div>
                                </div>
                                -->

                                <h6>@Eagle.Resource.LanguageResource.Insurance</h6>
                                <hr />
                                <!--start row-->
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.DayOfLongTerm)
                                    </div>
                                    <div class="col-md-2">
                                        @Html.TextBoxFor(model => model.DayOfLongTerm ,  new { @class = "span12" }) 
                                        @Html.ValidationMessageFor(model => model.DayOfLongTerm)
                                    </div>
                                    <div class="col-md-8" style="font-style:italic; font-size:small;">
                                        (@Eagle.Resource.LanguageResource.LongTermDaysNote)
                                    </div>
                                </div>
                                <!--end row-->
                                <!--start row-->
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.CutOffSI)
                                    </div>
                                    <div class="col-md-4">
                                        @Html.DropDownList("CutOffSI") 
                                    </div>
                                </div>
                                <!--end row-->
                            </div>
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="footbar">
                                <div>                                    
                                    <input class="btn btn-info AddModel" type="button" id="btnAdd" value="@Eagle.Resource.LanguageResource.btnSave" />
                                </div>
                            </div>
                        </div>
                        <!--End.row-->                 
                </div>
            </div>
        </div>
    </div>
</form>

@Html.Action("jqueryval", "Common", null)

<script type="text/javascript">
    InvokeDateTimePicker();
</script>