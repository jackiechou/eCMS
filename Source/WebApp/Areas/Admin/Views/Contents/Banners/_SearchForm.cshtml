@model Eagle.Model.Contents.Banners.BannerSearchViewModel

<div id="right_accordion" class="accordion-group">
    <div class="accordion-heading toolbar">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
            <span class="pull-right"><i class="glyphicon glyphicon-chevron-up icon-white"></i></span>
            <span class="heading-tite">@Eagle.Resource.LanguageResource.Search</span>
        </a>
    </div>
    <div id="form_accordion" class="accordion-body collapse in">
        <div class="accordion-inner">
            <div class="accordion-content">
                <!--start row-->
                <div class="row">
                    <div class="col-md-2">
                        <label for="BannerName">@Eagle.Resource.LanguageResource.BannerName</label>
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.BannerName, new { @class = "form-control" })
                    </div>
                    <div class="col-md-2">
                        <label for="BannerZoneId">@Eagle.Resource.LanguageResource.BannerZoneId</label>
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.BannerZoneId, null, new { @class = "form-control" })
                    </div>
                </div>
                <!--end row-->
                <!--start row-->
                <div class="row">
                    <div class="col-md-2">
                        <label for="BannerStatus">@Eagle.Resource.LanguageResource.BannerStatus</label>
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.BannerStatus, null, new { @class = "form-control" })
                    </div>
                    <div class="col-md-2">
                        <label for="Advertiser">@Eagle.Resource.LanguageResource.Advertiser</label>
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.Advertiser, new { @class = "form-control" })
                    </div>
                </div>
                <!--end row-->

            </div>
        </div>
        <!--/row-->
        <div class="row">
            <div class="footbar">
                <div>
                    <button class="btn" type="button" id="btnReset">@Eagle.Resource.LanguageResource.Reset</button>
                    <button class="btn btn-info" type="button" id="btnSearch">@Eagle.Resource.LanguageResource.Search</button>
                </div>
            </div>
        </div>
        <!--End.row-->
    </div>
</div>