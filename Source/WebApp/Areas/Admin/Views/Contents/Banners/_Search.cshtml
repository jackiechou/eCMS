@model List<Eagle.Model.Contents.Banners.BannerViewModel>

<div id="right_accordion" class="accordion-group">
    <div class="accordion-heading toolbar">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
            <span class="pull-right"><i class="glyphicon glyphicon-chevron-up icon-white"></i></span>
            <span class="heading-tite">@Eagle.Resource.LanguageResource.Search</span>
        </a>
    </div>
    <div id="form_accordion" class="accordion-body collapse in">
        <div class="accordion-inner">
            <div class="accordion-content">
                <!--start row-->
                <div class="row">
                    <div class="col-md-2">
                        <label for="LSCompanyID">@Eagle.Resource.LanguageResource.Company</label>
                    </div>
                    <div class="col-md-4">
                        @Html.TextBox("selectLSCompanyID", 0, new { @class = "easyui-combotree col-md-2" })
                    </div>
                    <div class="col-md-2">
                        <label for="LSLocationID">@Eagle.Resource.LanguageResource.Location</label>
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownList("LSLocationID", null, new { @class = "form-control" })
                    </div>
                </div>
                <!--end row-->
                <!--start row-->
                <div class="row">
                    <div class="col-md-2">
                        <label for="Code">@Eagle.Resource.LanguageResource.EmpCode</label>
                    </div>
                    <div class="col-md-4">
                        @Html.TextBox("Code", null, new { @class = "form-control" })
                    </div>
                    <div class="col-md-2">
                        <label for="FullName">@Eagle.Resource.LanguageResource.FullName</label>
                    </div>
                    <div class="col-md-4">
                        @Html.TextBox("FullName", null, new { @class = "form-control" })
                    </div>
                </div>
                <!--end row-->
                <!--start row-->
                <div class="row">
                    <div class="col-md-2">
                        <label for="LSPositionID">@Eagle.Resource.LanguageResource.Position</label>
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownList("LSPositionID", null, new { @class = "form-control" })
                    </div>
                    <div class="col-md-2">
                        <label for="Status">@Html.Raw(Eagle.Resource.LanguageResource.Status)</label>
                    </div>
                    <div class="col-md-4">
                        @Html.RadioButton("SearchStatus", true, true, new { id = "IsActive", @style = "float:left;" })
                        @Html.Label("IsActive", Eagle.Resource.LanguageResource.Working, new { @style = "float:left;margin:-4px 20px -4px 4px;" })

                        @Html.RadioButton("SearchStatus", false, false, new { id = "IsTerminated", @style = "float:left;" })
                        @Html.Label("Terminate", Eagle.Resource.LanguageResource.Terminated, new { @style = "float:left;margin:-4px 20px -4px 4px;" })

                        @Html.RadioButton("SearchStatus", "", false, new { id = "IsBoth", @style = "float:left;" })
                        @Html.Label("IsBoth", Eagle.Resource.LanguageResource.All, new { @style = "float:left;margin:-4px 20px -4px 4px;" })
                    </div>
                </div>
                <!--end row-->
            </div>
        </div>
        <!--/row-->
        <div class="row">
            <div class="footbar">
                <div>
                    <button class="btn" type="button" id="btnReset">@Eagle.Resource.LanguageResource.Reset</button>
                    <button class="btn btn-info" type="button" id="btnSearch">@Eagle.Resource.LanguageResource.Search</button>
                </div>
            </div>
        </div>
        <!--End.row-->
    </div>
</div>
