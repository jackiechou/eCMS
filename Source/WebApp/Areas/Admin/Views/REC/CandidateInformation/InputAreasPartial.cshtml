@model CandidateViewModel 
@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "frmAdd" }))
{ 
    <div class="row">
        <div id="alertMessageBox">
            @if (ViewBag.DisplayErrorMessage == true)
            {
                <div class="@ViewBag.CssClass">
                    <a href="#" class="close" data-dismiss="alert">&times;</a>
                    <strong>@ViewBag.SortMessage !</strong>
                    <div class="padding-left">
                        @Html.Raw(Server.HtmlDecode(ViewBag.Message))
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div id="collapsedContent">
            <div class="row">
            </div>
        </div>
        <ul class="nav nav-tabs" id="myTab">
            <li id="tab-1" class="active"><a href="#pane-1" data-toggle="tab">@Eagle.Resource.LanguageResource.GeneralInfo</a></li>
            <li id="tab-2"><a href="#pane-2" data-toggle="tab">@Eagle.Resource.LanguageResource.Contact</a></li>
            <li id="tab-3"><a href="#pane-3" data-toggle="tab">@Eagle.Resource.LanguageResource.EducationAndFavouriteAndSkill</a></li>
            <li id="tab-4"><a href="#pane-4" data-toggle="tab">@Eagle.Resource.LanguageResource.Expectation</a></li>
            <li id="tab-5"><a href="#pane-5" data-toggle="tab">@Eagle.Resource.LanguageResource.WorkingBackground</a></li>
            <li id="tab-6"><a href="#pane-6" data-toggle="tab">@Eagle.Resource.LanguageResource.Qualification</a></li>
            <li id="tab-7"><a href="#pane-7" data-toggle="tab">@Eagle.Resource.LanguageResource.AttachFile</a></li>
        </ul>
        <div id="myTabContent" class="tab-content responsive">

            @Html.HiddenFor(model => model.CandidateID)
            @Html.HiddenFor(model => model.Result)
            @Html.HiddenFor(model => model.EmpId)
            @Html.HiddenFor(model => model.InitialIDNo)
            @Html.HiddenFor(model => model.InitialCandidateCode)
                
            @Html.Partial("../REC/CandidateInformation/Tab1GeneralInfoPartial")
            @Html.Partial("../REC/CandidateInformation/Tab2AdderssPartial")
            @Html.Partial("../REC/CandidateInformation/Tab3CultureAndEducationPartial")
            @Html.Action("Tab4ExpectationPartial")
            <div class="tab-pane fade in" id="pane-5">
                @Html.Action("Tab5WorkingBackgroundPartial")
            </div>
            <div class="tab-pane fade in" id="pane-6">
                @Html.Action("Tab6QualificationPartial")
            </div>
             <div class="tab-pane fade in" id="pane-7">
                @Html.Action("Tab7AttachFilesPartial")
            </div>
        </div>

    </div>
}

