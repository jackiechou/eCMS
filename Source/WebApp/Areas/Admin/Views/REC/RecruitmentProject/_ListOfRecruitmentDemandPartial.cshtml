@model IEnumerable<RecruitmentDemandResultViewModel>
<div class="row" style="text-align: right; margin-top: -5px;">
      @if (Model != null && Model.Count() > 0)
	 {
        <input title="@Eagle.Resource.LanguageResource.Delete" type="button" class="btn-custom-Deleterow btnDeleteRecruitmentDemand" style="margin-right: 5px;">
     }else
     {
        <input title="@Eagle.Resource.LanguageResource.Delete" type="button" class="btn-custom-Delete-disabled-row btnDeleteRecruitmentDemand" style="margin-right: 5px;">
     }

    <input id="btnAddRecruitmentDemand" title="@Eagle.Resource.LanguageResource.AddNew" type="button" class="btn-custom-addrow" style="margin-right: 18px;">
</div>
<table id="dataTable" class="table table-bordered table-condensed table-hover table-striped tablesorter sortableTable">
    <thead>
            <tr>
                <th class="text_center">@Eagle.Resource.LanguageResource.No</th>
                <th>
                    @Html.DisplayNameFor(model => model.DemandCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmpCreateName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LSCompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LSPositionName)
                </th>
                <th class="text_center">
                    @Html.DisplayNameFor(model => model.DemandQuantity)
                </th>
                <th class="table-actions text_center no-sort">@Html.CheckBox("chkDemandDeleteAll")</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0; int k = -1;}
            @if (Model != null && Model.Count() > 0)
	        {
                foreach (var item in Model)
                {
                    i++;
                    k++;
                    <tr>
                        <td>
                            @i
                            <input type="hidden" value="@item.DemandID" name="DemandList[@k].DemandID" />
                            <input type="hidden" value="@item.DemandCode" name="DemandList[@k].DemandCode" />
                            <input type="hidden" value="@item.EmpCreateName" name="DemandList[@k].EmpCreateName" />
                            <input type="hidden" value="@item.LSCompanyName" name="DemandList[@k].LSCompanyName" />
                            <input type="hidden" value="@item.LSPositionName" name="DemandList[@k].LSPositionName" />
                            <input type="hidden" value="@item.DemandQuantity" name="DemandList[@k].DemandQuantity" />
                        </td>
                        <td>
                            @item.DemandCode
                        </td>
                        <td>
                            @item.EmpCreateName
                        </td>
                        <td>
                            @item.LSCompanyName
                        </td>
                        <td>
                            @item.LSPositionName
                        </td>
                        <td class="text_center">
                            @item.DemandQuantity
                        </td>
                        <td class="table-actions text_center no-sort">
                            @Html.CheckBox("chkDemandDelete", false, new { @value = item.DemandID }) 
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">
                        @Eagle.Resource.LanguageResource.PleaseClickAddNewButton_btnAddRecruitmentDemand
                    </td>
                </tr>
            }
        </tbody>
</table>
