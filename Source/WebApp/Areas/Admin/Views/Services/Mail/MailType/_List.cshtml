@model IEnumerable<Eagle.Model.Mail.MailTypeViewModel>
<div class="table">
    <table id="dataTable" class="use-dataTable table table-bordered table-condensed table-hover table-striped tablesorter sortableTable">
        <thead>
            <tr>
                <th class="text_center">@Eagle.Resource.LanguageResource.No</th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>       
                <th>
                    @Html.DisplayNameFor(model => model.SortKey)
                </th>      
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th class="table-actions text_center no-sort">@Eagle.Resource.LanguageResource.Actions</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var item in Model)
            {
                i++;
                 <tr id="@i">
                    <td>
                        @i
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>     
                     <td class="center">
                         @Html.DisplayFor(modelItem => item.SortKey)
                     </td>            
                    <td>
                        @Html.CheckBox("Status", item.Status == true, new { @disable = "disable" })
                    </td>
                    <td class="table-actions text_center center no-sort">
                        <a data-id="@item.TypeId" title="Edit" class="ico editItem">&nbsp;&nbsp;&nbsp;</a>
                        <a data-id="@item.TypeId" title="Delete" class="ico deleteItem">&nbsp;&nbsp;&nbsp;</a>
                        <a data-id="@item.TypeId" title="UpdateStatus" class="ico updateStatusItem">&nbsp;&nbsp;&nbsp;</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
