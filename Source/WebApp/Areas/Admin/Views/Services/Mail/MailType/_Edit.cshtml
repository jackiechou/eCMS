@model Eagle.Model.Mail.MailTypeViewModel
@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "myform", name = "myform", autocomplete = "off", @class = "form-horizontal" }))
{
    @*Click Button to pick data from grid in popup *@
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.Hidden("Mode")    
    @Html.HiddenFor(model => model.TypeId, new { @class = "KeyId" })
    <div class="box">
        <div class="row">            
            <div id="right_accordion" class="accordion-group">
                <div class="accordion-heading toolbar">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                        <span class="pull-right"><i class="glyphicon glyphicon-chevron-up icon-white"></i></span>
                        <span class="heading-tite">@Html.Raw(Eagle.Resource.LanguageResource.FormArea)</span>
                    </a>
                </div>
                <div id="form_accordion" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <div class="accordion-content">
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.ParentId)
                                </div>
                                <div class="col-md-10">
                                    @*@Html.DropDownListFor(model => model.ParentId, null, new { @class = "form-control" })*@

                                    @*<select id="ParentId" name="ParentId" class="easyui-combotree" style="width:200px;"></select>*@
                                    @*<input id="ParentId" name="ParentId" type="text" class="easyui-combotree" value="0" style="width:200px;">*@
                                    @Html.TextBox("cboParentId", Model.ParentId, new { @class = "easyui-combotree", width = "200px" })
                                    @Html.HiddenFor(model => model.ParentId)
                                    @Html.ValidationMessageFor(model => model.ParentId)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Name)
                                </div>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Name, new { @class = "col-md-12 form-control" })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Description)
                                </div>
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.Description, new { @class = "col-md-12 form-control" })
                                    @Html.ValidationMessageFor(model => model.Description)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.Status)
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownListFor(model => model.Status, null, new { @class = "col-md-12 form-control" })
                                    @Html.ValidationMessageFor(model => model.Status)
                                </div>
                            </div>   
                            
                            <!--/actions-->
                            <div id="actions" class="row">
                                <div class="footbar">
                                    <input type="button" id="btnAdd" value="@Html.Raw(Eagle.Resource.LanguageResource.btnSave)" class="btn btn-info add" />
                                    <input type="button" id="btnEdit" value="@Html.Raw(Eagle.Resource.LanguageResource.btnSave)" class="btn btn-info edit" />
                                    <input type="button" id="btnReset" value="@Html.Raw(Eagle.Resource.LanguageResource.btnReset)" class="btn" />
                                </div>
                            </div>
                            <!--End.actions-->                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
