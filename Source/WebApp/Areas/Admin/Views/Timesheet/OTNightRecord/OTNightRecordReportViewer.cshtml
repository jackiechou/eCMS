@Html.DevExpress().ReportViewer(settings =>
{
    settings.Name = "reportViewer1";
    settings.Report = (OTNightRecordXtraReport)ViewData["Report"];
    settings.AutoSize = false;
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.Height = 1000;    
    settings.Attributes.Add("class", "reportViewer");
    settings.CallbackRouteValues = new { Controller = "OTNightRecord", Action = "LoadOTNightRecordReportViewer" };
    settings.ExportRouteValues = new { Controller = "OTNightRecord", Action = "ExportOTNightRecordData" };
}).GetHtml()
