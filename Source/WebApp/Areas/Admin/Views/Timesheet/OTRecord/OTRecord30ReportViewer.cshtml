@Html.DevExpress().ReportViewer(settings =>
{
    settings.Name = "reportViewer1";
    settings.Report = (OTRecord30XtraReport)ViewData["Report"];
    settings.AutoSize = false;
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.Height = 1000;    
    settings.Attributes.Add("class", "reportViewer");
    settings.CallbackRouteValues = new { Controller = "OTRecord", Action = "LoadOTRecordReportViewer" };
    settings.ExportRouteValues = new { Controller = "OTRecord", Action = "ExportOTRecordData" };
}).GetHtml()
