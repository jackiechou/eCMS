@model LeaveApplicationCreateViewModel
<!--Begin search -->
<div id="alertMessageBox">
    @if (ViewBag.DisplayErrorMessage == true)
    {
        <div class="@ViewBag.CssClass">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>@ViewBag.SortMessage !</strong> @ViewBag.Message
        </div>
    }
</div>

<div class="box">
    <div class="row">
        <div id="right_accordion" class="accordion-group">
            <div class="accordion-heading toolbar">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#form_accordion">
                    <span class="pull-right"><i class="icon-chevron-up icon-white"></i></span>
                    <span class="heading-tite">@Eagle.Resource.LanguageResource.InputArea</span>
                </a>
            </div>
            <div id="form_accordion" class="accordion-body collapse in">
                <div>
                    <div class="accordion-inner">
                        <div class="accordion-content">

                            <div class="row">
                                <div class="col-md-2">
                                    <label>
                                        @Eagle.Resource.LanguageResource.LastCompanyDefine
                                    </label>
                                </div>
                                <div class="col-md-4">
                                    <select id="LSCompanyID" name="LSCompanyID" class="easyui-combotree span2"></select>
                                    <script type="text/javascript">
                                        LoadComboTree('LSCompanyID');
                                        function LoadComboTree(controlId) {
                                            $('#' + controlId).combotree({
                                                url: '/CommonCompany/GetAll',
                                                textField: 'title',
                                                valueField: 'id',
                                                onLoadSuccess: function (row, data) {
                                                    $(this).tree("collapseAll");
                                                },
                                                onSelect: function (node) {
                                                    //var selectedNode = $('div[node-id=' + node.id + ']');
                                                    //$("input[name='SearchLSCompanyID']").val(node.id);
                                                    //$("input[name='SearchLSCompanyID']").trigger("change");
                                                }
                                            });
                                        }
                                    </script>
                                </div>
                                 <div class="col-md-2">
                                    @Html.LabelFor(model => model.Year)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBox("Year",(int)ViewBag.Year,new { @class = "span4" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.EmpCode)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.EmpCode, new { @Id = "SearchEmpCode", @class = "span12" })
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.FullName)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.FullName, new { @Id = "SearchFullName", @class = "span12" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.LSLeaveDayTypeID)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBox("SelectLeaveDayTypeID", null, new { @class = "span12" })
                                    @Html.HiddenFor(model => model.LSLeaveDayTypeName)
                                    @Html.HiddenFor(model => model.LSLeaveDayTypeID)
                                </div>
                               
                            </div>
                            <div class="row">
                                <div class="footbar">
                                    <div>
                                        <input type="button" id="btnSearch" value="@Eagle.Resource.LanguageResource.btnSearch" class="direct_bt btn btn-info btn-larg1e row-fluid" />
                                    </div>
                                </div>
                            </div>
                            <!--End search -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var strInput = '@Html.Raw(Eagle.Resource.LanguageResource.PleaseInputLeaveType)';
    PopulateDropDownListAutoComplete("SelectLeaveDayTypeID", "LSLeaveDayTypeID", "LSLeaveDayTypeName", strInput, areas + '/LeaveDayType/DropdownList');
</script>


